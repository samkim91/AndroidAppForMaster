                <!-- 현장 가격 변동 요인 -->
                <kr.co.soogong.master.ui.widget.ProfileChipGroupCard
                    android:id="@+id/flexible_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:layout_marginBottom="@dimen/gap_24"
                    android:background="@drawable/shape_radius8_white_background"
                    android:elevation="@dimen/gap_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_image"
                    app:subTitle='@{"고객이 당황하지 않도록 현장의 가격 변동요인을 알려주세요."}'
                    app:subTitleVisible="@{true}"
                    app:title='@{"현장 가격 변동 요인"}'
                    />

                <!-- 기타 변동 가능사항 -->
                <kr.co.soogong.master.ui.widget.ProfileChipGroupCard
                    android:id="@+id/other_flexible_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
