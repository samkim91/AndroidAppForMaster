<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowBackground">@color/app_background_color</item>
        <item name="colorPrimary">@color/color_1FC472</item>
        <item name="colorPrimaryDark">@color/color_1FC472</item>
    </style>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <!-- ActionBar theme. -->
    <style name="AppActionBar" parent="android:Widget.DeviceDefault.ActionBar">
        <item name="android:background">@color/action_bar_background_color</item>
        <item name="android:titleTextStyle">@style/AppActionBar.Title</item>
    </style>

    <style name="AppActionBar.Title">
        <item name="android:textColor">@color/action_bar_title_color</item>
        <item name="android:textSize">@dimen/actionbar_title_collapsed_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/actionbar_title_collapsed_extra_size</item>
    </style>

    <style name="AppActionBar.SubTitle">
        <item name="android:textColor">@color/action_bar_sub_title_color</item>
        <item name="android:textSize">@dimen/actionbar_sub_title_collapsed_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/actionbar_title_collapsed_extra_size</item>
    </style>

    <style name="ListSubHeader" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/list_header_text_size</item>
        <item name="android:textColor">@color/list_header_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@color/list_item_text_color</item>
    </style>

    <style name="ListItemDescriptionText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/list_item_description_text_size</item>
        <item name="android:textColor">@color/list_item_description_text_color</item>
    </style>

    <style name="tiny_text_style">
        <item name="android:textSize">@dimen/text_tiny_size</item>
    </style>

    <style name="tiny_text_style.medium" parent="tiny_text_style">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="tiny_text_style.regular" parent="tiny_text_style">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="tiny_text_style.bold" parent="tiny_text_style">
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="small_text_style">
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="small_text_style.medium" parent="small_text_style">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="small_text_style.regular" parent="small_text_style">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="small_text_style.bold" parent="small_text_style">
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="medium_text_style">
        <item name="android:textSize">@dimen/text_medium_size</item>
    </style>

    <style name="medium_text_style.medium" parent="medium_text_style">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="medium_text_style.regular" parent="medium_text_style">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="medium_text_style.bold" parent="medium_text_style">
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="big_text_style">
        <item name="android:textSize">@dimen/text_big_size</item>
    </style>

    <style name="big_text_style.medium" parent="big_text_style">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="big_text_style.regular" parent="big_text_style">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="big_text_style.bold" parent="big_text_style">
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="CustomTabText" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="SignUpTabText" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/color_BDBDBD</item>
    </style>

    <style name="ChipStyles" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/basic_white</item>
        <item name="android:textColor">@color/chip_selector</item>
        <item name="chipStrokeColor">@color/chip_selector</item>
        <item name="chipStrokeWidth">@dimen/chips_stroke_width_1dp</item>
        <item name="chipCornerRadius">@dimen/chips_radius_8dp</item>
        <item name="chipMinHeight">@dimen/chips_height_40dp</item>

    </style>
</resources>