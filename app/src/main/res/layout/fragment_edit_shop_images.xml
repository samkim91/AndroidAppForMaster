<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/bind"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.profile.detail.shopimages.EditShopImagesViewModel" />

        <variable
            name="buttonThemeGettingImages"
            type="kr.co.soogong.master.data.common.ButtonTheme" />

        <variable
            name="gettingImagesClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <kr.co.soogong.master.atomic.molecules.SubheadlineButtonBig
            android:id="@+id/sbb_getting_images"
            android:layout_width="@dimen/gap_0"
            android:layout_height="wrap_content"
            app:buttonText="@{@string/getting_images}"
            app:buttonTheme="@{buttonThemeGettingImages}"
            app:hint="@{@string/register_shop_images_hint}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:onButtonClick="@{gettingImagesClickListener}"
            app:subheadline="@{@string/register_shop_images}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_registered_images"
            style="@style/subheadline.bold"
            android:layout_width="@dimen/gap_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_24"
            android:text="@string/registered_images"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sbb_getting_images"
            bind:visible="@{vm.shopImages}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_registered_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_20"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_registered_images"
            app:layout_constraintVertical_bias="0"
            app:spanCount="3"
            bind:photo_list_with_close="@{vm.shopImages}"
            tools:listitem="@layout/view_holder_image_deletable" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>