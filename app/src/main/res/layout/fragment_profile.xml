<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/bind"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="buttonThemeRequestReview"
            type="kr.co.soogong.master.data.common.ButtonTheme"/>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.profile.ProfileViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_guide_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/gap_16"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/end_guide_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/gap_16"/>

            <kr.co.soogong.master.atomic.molecules.ActionBar
                android:id="@+id/ab_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="@{@string/main_activity_navigation_bar_profile}" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_profile_image"
                android:layout_width="@dimen/gap_80"
                android:layout_height="@dimen/gap_80"
                android:layout_marginTop="@dimen/gap_44"
                app:layout_constraintEnd_toEndOf="@id/end_guide_line"
                app:layout_constraintStart_toStartOf="@id/start_guide_line"
                app:layout_constraintTop_toBottomOf="@id/ab_header"
                app:setCircleImageByUrl="@{vm.profile.basicInformation.profileImage.url}" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_add"
                bind:visible="@{vm.profile.basicInformation.profileImage.url.empty}"
                app:layout_constraintBottom_toBottomOf="@id/iv_profile_image"
                app:layout_constraintEnd_toEndOf="@id/iv_profile_image" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_subscription_plan"
                style="@style/caption_2.bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/brand_green"
                android:layout_marginTop="@dimen/gap_16"
                app:layout_constraintEnd_toEndOf="@id/end_guide_line"
                app:layout_constraintStart_toStartOf="@id/start_guide_line"
                app:layout_constraintTop_toBottomOf="@id/iv_profile_image"
                app:subscriptionPlan="@{vm.profile.subscriptionPlan}"
                tools:text="개런티 마스터" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_representative_name"
                style="@style/headline.bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{vm.profile.representativeName != null ? vm.profile.representativeName : @string/fill_representative_name}"
                android:textColor="@color/black"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="@id/end_guide_line"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/start_guide_line"
                app:layout_constraintTop_toBottomOf="@id/tv_subscription_plan"
                tools:text="마그컹컹컹" />

            <kr.co.soogong.master.atomic.organisms.ReviewBox
                android:id="@+id/review_box"
                android:layout_width="@dimen/gap_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_26"
                app:layout_constraintEnd_toEndOf="@id/end_guide_line"
                app:layout_constraintStart_toStartOf="@id/start_guide_line"
                app:layout_constraintTop_toBottomOf="@id/tv_representative_name"
                app:recommendCount="@{vm.profile.myReview.averageRecommendation}"
                app:reviewCount="@{vm.profile.myReview.reviewCount}" />
            <!-- todo : 완료수 추가 필요 -->

            <kr.co.soogong.master.atomic.atoms.ButtonBig
                android:id="@+id/bb_request_review"
                android:layout_width="@dimen/gap_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_16"
                app:buttonTheme="@{buttonThemeRequestReview}"
                app:buttonText="@{@string/request_review_label}"
                app:layout_constraintEnd_toEndOf="@id/end_guide_line"
                app:layout_constraintStart_toStartOf="@id/start_guide_line"
                app:layout_constraintTop_toBottomOf="@id/review_box" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line"
                android:layout_width="@dimen/gap_0"
                android:layout_height="@dimen/gap_1"
                android:background="@color/light_grey_2"
                android:layout_marginTop="@dimen/gap_24"
                app:layout_constraintEnd_toEndOf="@id/end_guide_line"
                app:layout_constraintStart_toStartOf="@id/start_guide_line"
                app:layout_constraintTop_toBottomOf="@id/bb_request_review" />

            <kr.co.soogong.master.atomic.molecules.SettingsButton
                android:id="@+id/edit_required_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line"
                app:title='@{"필수 정보 등록·수정하기"}' />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line2"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:background="@color/c_E3E3E3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_required_info" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_F5F5F5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line2">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/profile_card_container_label"
                    style="@style/text_style_16sp.medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:text="@string/profile_card_container_label"
                    android:textColor="@color/c_121212"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 무료 방문 실측 여부 -->
                <kr.co.soogong.master.atomic.molecules.ProfileChipGroupCard
                    android:id="@+id/free_measure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_16"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_white_background_radius8"
                    android:elevation="@dimen/gap_4"
                    app:chipGroupWithoutTitleByFlag="@{vm.profile.basicInformation.freeMeasureYn}"
                    app:defaultButtonByFlag="@{vm.profile.basicInformation.freeMeasureYn}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_card_container_label"
                    app:subTitle="@{@string/profile_card_subtitle_for_free_measure}"
                    app:title="@{@string/profile_card_title_for_free_measure}" />

                <!-- 포트폴리오 -->
                <kr.co.soogong.master.atomic.molecules.ProfileDefaultCard
                    android:id="@+id/portfolio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_white_background_radius8"
                    android:elevation="@dimen/gap_4"
                    app:defaultButtonByItems="@{vm.profile.basicInformation.portfolios.size > 0}"
                    app:firstDetail='@{vm.profile.basicInformation.portfolios.size > 0 ? vm.profile.basicInformation.portfolios.size+"개의 포트폴리오를 올리셨어요!" : ""}'
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/free_measure"
                    app:subTitle="@{@string/profile_card_subtitle_for_portfolio}"
                    app:title="@{@string/profile_card_title_for_portfolio}" />

                <!-- 시공 종류별 가격 -->
                <kr.co.soogong.master.atomic.molecules.ProfileDefaultCard
                    android:id="@+id/price_by_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_white_background_radius8"
                    android:elevation="@dimen/gap_4"
                    app:defaultButtonByItems='@{vm.profile.basicInformation.priceByProjects.size > 0}'
                    app:firstDetail='@{vm.profile.basicInformation.priceByProjects.size > 0 ? vm.profile.basicInformation.priceByProjects.size+"개의 가격 정보를 올리셨어요!" : ""}'
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/portfolio"
                    app:subTitle="@{@string/profile_card_subtitle_for_price_by_project}"
                    app:title="@{@string/profile_card_title_for_price_by_project}" />

                <!-- 프로필 사진 -->
                <kr.co.soogong.master.atomic.molecules.ProfileImageCard
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_white_background_radius8"
                    android:elevation="@dimen/gap_4"
                    app:defaultButtonByImageV3="@{vm.profile.basicInformation.profileImage.url}"
                    app:firstDetailWithSimpleText="@{vm.profile.basicInformation.profileImage.url}"
                    app:imageUrl="@{vm.profile.basicInformation.profileImage.url}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/price_by_project"
                    app:subTitle="@{@string/profile_card_subtitle_for_profile_image}"
                    app:title="@{@string/profile_card_title_for_profile_image}" />

                <!-- 현장 가격 변동 요인 -->
                <kr.co.soogong.master.atomic.molecules.ProfileChipGroupCard
                    android:id="@+id/flexible_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_white_background_radius8"
                    android:elevation="@dimen/gap_4"
                    app:chipGroupWithoutTitle="@{vm.profile.basicInformation.flexibleCost}"
                    app:defaultButtonByList="@{vm.profile.basicInformation.flexibleCost}"
                    app:detail="@{vm.profile.basicInformation.flexibleCost}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_image"
                    app:subTitle="@{@string/profile_card_subtitle_for_flexible_cost}"
                    app:title="@{@string/profile_card_title_for_flexible_cost}" />

                <!-- 기타 변동 가능사항 -->
                <kr.co.soogong.master.atomic.molecules.ProfileChipGroupCard
                    android:id="@+id/other_flexible_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_white_background_radius8"
                    android:elevation="@dimen/gap_4"
                    app:chipGroupWithoutTitle="@{vm.profile.basicInformation.otherFlexibleOption}"
                    app:defaultButtonByList="@{vm.profile.basicInformation.otherFlexibleOption}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/flexible_cost"
                    app:title="@{@string/profile_card_title_for_other_flexible_options}" />

                <!-- 이메일 -->
                <kr.co.soogong.master.atomic.molecules.ProfileDefaultCard
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:layout_marginBottom="@dimen/gap_24"
                    android:background="@drawable/shape_white_background_radius8"
                    android:elevation="@dimen/gap_4"
                    app:defaultButtonByString="@{vm.profile.basicInformation.email}"
                    app:firstDetail="@{vm.profile.basicInformation.email}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/other_flexible_option"
                    app:title="@{@string/profile_card_title_for_email}" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>