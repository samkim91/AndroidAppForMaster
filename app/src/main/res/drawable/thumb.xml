<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:dither="true" android:shape="oval">
            <solid android:color="@color/basic_white" />
            <size android:width="22dp" android:height="22dp" />
            <stroke android:width="2dp" android:color="@color/app_color" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:dither="true" android:shape="oval">
            <solid android:color="@color/basic_white" />
            <size android:width="22dp" android:height="22dp" />
            <stroke android:width="2dp" android:color="@color/line_color" />
        </shape>
    </item>
</selector>