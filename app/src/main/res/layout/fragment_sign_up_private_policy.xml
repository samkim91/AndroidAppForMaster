<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.auth.signup.SignUpViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <kr.co.soogong.master.ui.widget.LargeTitleSubtitle
                android:id="@+id/title_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_40"
                android:layout_marginEnd="@dimen/gap_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title='@{"수공 마스터 앱 서비스 이용 약관에\n동의하고 수공과 함께해 주세요!"}' />

            <kr.co.soogong.master.ui.widget.TextCheckBox
                android:id="@+id/agreed_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_32"
                android:layout_marginEnd="@dimen/gap_20"
                app:check="@{vm.privacyPolicy &amp;&amp; vm.marketingPush}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_widget"
                app:text='@{"모두 동의합니다. (선택 정보 포함)"}' />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="@dimen/line_height"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_20"
                android:layout_marginEnd="@dimen/gap_20"
                android:background="@color/line_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/agreed_all" />

            <kr.co.soogong.master.ui.widget.TextCheckBox
                android:id="@+id/agreed_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_20"
                android:layout_marginEnd="@dimen/gap_20"
                app:check="@={vm.privacyPolicy}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line" />

            <kr.co.soogong.master.ui.widget.TextCheckBox
                android:id="@+id/agreed_marketing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_20"
                android:layout_marginEnd="@dimen/gap_20"
                app:check="@={vm.marketingPush}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/agreed_privacy_policy"
                app:text='@{"마케팅 수신에 동의합니다. (선택)"}' />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/alert_privacy_policy_agreement_required"
                style="@style/text_style_14sp.regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_4"
                android:text="@string/alert_privacy_policy_agreement_required"
                android:textColor="@color/color_FF711D"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/agreed_marketing" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/default_button"
                style="@style/text_style_16sp.bold"
                android:layout_width="@dimen/gap_0"
                android:layout_height="@dimen/gap_48"
                android:background="@color/color_22D47B"
                android:text="@string/sign_up_over"
                android:textColor="@color/basic_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>