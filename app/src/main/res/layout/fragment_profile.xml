                <!-- 시공 종류별 가격 -->
                <kr.co.soogong.master.ui.widget.ProfileDefaultCard
                    android:id="@+id/price_by_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_radius8_white_background"
                    android:elevation="@dimen/gap_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/portfolio"
                    app:subTitle='@{"다양한 시공의 가격 정보는 고객 선택에 중요한 기준이 됩니다."}'
                    app:subTitleVisible="@{true}"
                    app:title='@{"시공 종류별 가격"}' />

                <!-- 프로필 사진 -->
                <kr.co.soogong.master.ui.widget.ProfileImageCard
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_radius8_white_background"
                    android:elevation="@dimen/gap_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/price_by_project"
                    app:subTitle='@{"고객이 마스터님을 알아볼 수 있게 얼굴을 알려주세요."}'
                    app:subTitleVisible="@{true}"
                    app:imageUrl='@{"https://assets.soogong.co.kr/categories/temp/floorBoard.png"}'
                    app:title='@{"프로필 사진"}' />

