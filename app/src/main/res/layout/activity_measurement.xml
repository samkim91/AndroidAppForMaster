<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/bind">

    <data>

        <import type="android.text.InputType" />

        <import type="android.net.Uri" />

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.requirement.action.write.WriteEstimationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/action_bar"
            layout="@layout/action_bar_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_0"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_bar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <kr.co.soogong.master.ui.widget.TitleEditText
                    android:id="@+id/simpleCost"
                    android:layout_width="@dimen/gap_0"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_52"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:textColor="@color/text_basic_color"
                    app:alertText="@{@string/minimum_cost}"
                    app:alertVisible="@{false}"
                    app:content="@={vm.simpleCost}"
                    app:hintText="@{@string/insert_number_only_with_unit_text}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:setInputType="@{InputType.TYPE_CLASS_NUMBER}"
                    app:setMaxLength="@{13}"
                    app:title="@{@string/estimation_price_text}" />

                <kr.co.soogong.master.ui.widget.TitleRecyclerImage
                    android:id="@+id/measurement_images_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_40"
                    android:layout_marginEnd="@dimen/gap_20"
                    app:images="@{vm.estimationImages}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/simpleCost"
                    app:title="@{@string/measure_image_holder_label}" />

                <kr.co.soogong.master.ui.widget.AlertBox
                    android:id="@+id/alert_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_52"
                    android:layout_marginEnd="@dimen/gap_20"
                    app:alertContent="@{@string/alert_box_content_for_measure}"
                    app:alertTitle="@{@string/alert_box_title_for_measure}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/measurement_images_picker"
                    app:theme="@{101}" />

                <kr.co.soogong.master.ui.widget.TitleEditTextCounter
                    android:id="@+id/write_detail"
                    android:layout_width="@dimen/gap_0"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_52"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:layout_marginBottom="@dimen/gap_30"
                    app:content="@={vm.description}"
                    app:hintText="@{@string/masters_estimation_description_hint_text}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/alert_box"
                    app:limitedCount='@{500}'
                    app:title="@{@string/masters_estimation_description_label}" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>