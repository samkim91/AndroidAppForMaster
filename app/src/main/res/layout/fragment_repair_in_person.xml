<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.auth.signup.SignUpViewModel" />

        <variable
            name="colorThemeProfileGuideline"
            type="kr.co.soogong.master.data.common.ColorTheme" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_subheadline"
            android:layout_width="@dimen/gap_0"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:text="@string/asking_repair_in_person"
            android:textAppearance="@style/subheadline.bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_repair_in_person"
            style="@style/check_box_rectangle"
            android:layout_width="@dimen/gap_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_8"
            android:checked="@={vm.repairInPerson}"
            android:text="@string/do_repair_in_person"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_subheadline" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_alert"
            android:layout_width="@dimen/gap_0"
            android:layout_height="wrap_content"
            android:text="@string/required_field_alert"
            android:textAppearance="@style/caption_1.regular"
            android:textColor="@color/brand_red"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_repair_in_person"
            tools:visibility="gone" />

        <kr.co.soogong.master.atomic.molecules.BoxIconContent
            android:id="@+id/bic_notice"
            android:layout_width="@dimen/gap_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_8"
            app:colorTheme="@{colorThemeProfileGuideline}"
            app:content="@{@string/notice_for_repair_in_person}"
            app:icon="@{@drawable/ic_speaker}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_alert" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>