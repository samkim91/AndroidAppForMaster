<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="key"
            type="String" />

        <variable
            name="value"
            type="String" />

        <variable
            name="extra"
            type="String" />

        <variable
            name="alert"
            type="String" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            tools:background="@drawable/ic_won" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/key_textview"
            style="@style/text_style_14sp.medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap_4"
            android:text="@{key}"
            android:textColor="@color/color_555555"
            app:layout_constraintBottom_toBottomOf="@id/icon"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="@id/icon"
            tools:text="나의 견적가 :" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/value_textview"
            style="@style/text_style_14sp.bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap_4"
            android:text="@{value}"
            android:textColor="@color/color_555555"
            app:layout_constraintBottom_toBottomOf="@id/key_textview"
            app:layout_constraintStart_toEndOf="@id/key_textview"
            app:layout_constraintTop_toTopOf="@id/key_textview"
            tools:text="300,000원" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/extra_textview"
            style="@style/text_style_10sp.medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap_6"
            android:text="@{extra}"
            android:textColor="@color/color_A8A8A8"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/value_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/value_textview"
            app:layout_constraintTop_toTopOf="@id/value_textview"
            tools:text="부가세 포함" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/alert_textview"
            style="@style/text_style_12sp.medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{alert}"
            android:textColor="@color/color_909090"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/key_textview"
            app:layout_constraintTop_toBottomOf="@id/key_textview"
            tools:text="2주 내 고객 미응답 시 해당 문의가 삭제됩니다." />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>