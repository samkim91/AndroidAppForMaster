<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="estimationDescription"
            type="String" />

        <variable
            name="closeClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="confirmClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/header_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_4"
            android:background="@drawable/ic_small_bar"
            android:backgroundTint="@color/light_grey_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap_20"
            android:layout_marginTop="@dimen/gap_24"
            android:background="@drawable/ic_close_rounded"
            android:backgroundTint="@color/grey_2"
            android:onClick="@{closeClickListener}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_24"
            android:layout_marginEnd="@dimen/gap_20"
            android:background="@drawable/ic_simple_check"
            android:backgroundTint="@color/grey_2"
            android:onClick="@{confirmClickListener}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:barrierMargin="@dimen/gap_16"
            app:constraint_referenced_ids="iv_close_button, iv_confirm_button" />

        <kr.co.soogong.master.atomic.molecules.SubheadlineTextareaCounter
            android:id="@+id/stc_description"
            android:layout_width="@dimen/gap_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap_16"
            android:layout_marginEnd="@dimen/gap_16"
            android:layout_marginBottom="@dimen/gap_16"
            app:content="@{estimationDescription}"
            app:hint="@{@string/estimation_description_notice}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier_description"
            app:maxCount="@{150}"
            app:subheadline="@{@string/estimation_description}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>