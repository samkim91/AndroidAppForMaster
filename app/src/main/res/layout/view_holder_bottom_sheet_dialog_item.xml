<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="kr.co.soogong.master.ui.dialog.bottomsheet.BottomSheetDialogData" />

        <variable
            name="item_click_lister"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="@{item_click_lister}">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content"
            style="@style/medium_text_style.bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/gap_16"
            android:paddingBottom="@dimen/gap_16"
            android:textColor="@color/color_121212"
            android:text="@{data.text}"
            tools:text="내용" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginStart="@dimen/gap_13"
            android:layout_marginEnd="@dimen/gap_13"
            android:background="@color/color_EEEEEE" />
    </LinearLayout>
</layout>