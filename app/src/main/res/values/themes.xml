<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowBackground">@color/app_background_color</item>
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/app_color</item>
    </style>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <!-- ActionBar theme. -->
    <style name="AppActionBar" parent="android:Widget.DeviceDefault.ActionBar">
        <item name="android:background">@color/action_bar_background_color</item>
        <item name="android:titleTextStyle">@style/AppActionBar.Title</item>
    </style>

    <style name="AppActionBar.Title">
        <item name="android:textColor">@color/action_bar_title_color</item>
        <item name="android:textSize">@dimen/actionbar_title_collapsed_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/actionbar_title_collapsed_extra_size</item>
    </style>

    <style name="AppActionBar.SubTitle">
        <item name="android:textColor">@color/action_bar_sub_title_color</item>
        <item name="android:textSize">@dimen/actionbar_sub_title_collapsed_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/actionbar_title_collapsed_extra_size</item>
    </style>

    <style name="AppActionBar.Extended" />

    <style name="AppActionBar.Extended.Title">
        <item name="android:textColor">@color/action_bar_title_color</item>
        <item name="android:textSize">@dimen/actionbar_title_expanded_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/actionbar_title_expanded_extra_size</item>
    </style>

    <style name="AppActionBar.Extended.SubTitle">
        <item name="android:textColor">@color/action_bar_sub_title_color</item>
        <item name="android:textSize">@dimen/actionbar_sub_title_expanded_text_size</item>
    </style>

    <style name="AppActionBar.Extended.TitleWhiteText" parent="android:TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@color/action_bar_title_color_white</item>
        <item name="android:textSize">@dimen/actionbar_title_expanded_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/actionbar_title_expanded_extra_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ListSubHeader" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/list_header_text_size</item>
        <item name="android:textColor">@color/list_header_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@color/list_item_text_color</item>
    </style>

    <style name="ListItemDescriptionText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/list_item_description_text_size</item>
        <item name="android:textColor">@color/list_item_description_text_color</item>
    </style>

    <style name="small_text_style">
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="small_text_style.medium" parent="small_text_style">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="small_text_style.regular" parent="small_text_style">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="small_text_style.bold" parent="small_text_style">
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="medium_text_style">
        <item name="android:textSize">@dimen/text_medium_size</item>
    </style>

    <style name="medium_text_style.medium" parent="medium_text_style">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="medium_text_style.regular" parent="medium_text_style">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="medium_text_style.bold" parent="medium_text_style">
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="big_text_style">
        <item name="android:textSize">@dimen/text_big_size</item>
    </style>

    <style name="big_text_style.medium" parent="big_text_style">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="big_text_style.regular" parent="big_text_style">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="big_text_style.bold" parent="big_text_style">
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="CustomTabText" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
</resources>