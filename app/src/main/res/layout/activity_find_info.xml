<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="findInfoClick"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/action_bar"
            layout="@layout/action_bar" />

        <kr.co.soogong.master.ui.widget.TitleEditTextView
            android:id="@+id/input_name"
            style="@style/medium_text_style.medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            app:hintText='@{"등록되지 않은 업체명입니다."}'
            app:hintVisible="@{false}"
            app:title='@{"업체명"}' />

        <kr.co.soogong.master.ui.widget.TitleEditTextView
            android:id="@+id/input_contact"
            style="@style/medium_text_style.medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            app:hintText='@{"등록되지 않은 전화번호입니다."}'
            app:hintVisible="@{false}"
            app:title='@{"연락처"}' />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/medium_text_style.bold"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/status_button_call_background"
            android:onClick="@{findInfoClick}"
            android:text="아이디·비밀번호 전송"
            android:textColor="@color/basic_white" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/medium_text_style.regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="연락처로 아이디·비밀번호를 전송해드립니다."
            android:textColor="@color/tertiary_text_color" />

    </LinearLayout>
</layout>