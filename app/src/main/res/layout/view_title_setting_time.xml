<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/bind">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            style="@style/medium_text_style.medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_basic_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="연락 가능한 시간을 선택해주세요. (선택)" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sub_title"
            style="@style/small_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_4"
            android:textColor="@color/color_616161"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:text="추가 설명할 내용을 적으면 됩니다." />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/start_time"
            style="@style/small_text_style"
            android:layout_width="0dp"
            android:minWidth="@dimen/gap_40"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_12"
            android:background="@drawable/shape_fill_transparent_board_gray"
            android:paddingStart="@dimen/gap_16"
            android:paddingTop="@dimen/gap_10"
            android:paddingEnd="@dimen/gap_16"
            android:paddingBottom="@dimen/gap_10"
            android:textColorHint="@color/text_hint_color"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/start_time_text"
            app:layout_constraintTop_toBottomOf="@id/sub_title"
            app:layout_constraintHorizontal_weight="0.4"
            tools:hint="시간 선택" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/start_time_text"
            android:text="@string/start_time_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingStart="@dimen/gap_16"
            android:paddingTop="@dimen/gap_10"
            android:paddingEnd="@dimen/gap_16"
            android:paddingBottom="@dimen/gap_10"
            android:textColor="@color/color_212121"
            style="@style/medium_text_style"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@id/start_time"
            app:layout_constraintEnd_toEndOf="@id/end_time"
            app:layout_constraintTop_toTopOf="@id/sub_title"
            app:layout_constraintHorizontal_weight="0.2"
             />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/end_time"
            style="@style/small_text_style"
            android:layout_width="0dp"
            android:minWidth="@dimen/gap_40"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_12"
            android:background="@drawable/shape_fill_transparent_board_gray"
            android:paddingStart="@dimen/gap_16"
            android:paddingTop="@dimen/gap_10"
            android:paddingEnd="@dimen/gap_16"
            android:paddingBottom="@dimen/gap_10"
            android:textColorHint="@color/text_hint_color"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@id/end_time_text"
            app:layout_constraintStart_toEndOf="@id/start_time_text"
            app:layout_constraintTop_toBottomOf="@id/sub_title"
            app:layout_constraintHorizontal_weight="0.4"
            tools:hint="시간 선택" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/end_time_text"
            android:text="@string/end_time_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingStart="@dimen/gap_16"
            android:paddingTop="@dimen/gap_10"
            android:paddingEnd="@dimen/gap_16"
            android:paddingBottom="@dimen/gap_10"
            android:textColor="@color/color_212121"
            style="@style/medium_text_style"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/end_time"
            app:layout_constraintTop_toBottomOf="@id/sub_title"
            app:layout_constraintHorizontal_weight="0.2"
             />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/alert"
            style="@style/small_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_4"
            android:textColor="@color/text_alert_color"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/start_time"
            tools:text="필수 정보입니다." />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>