<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="kr.co.soogong.master.R" />

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.home.HomeViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_16"
                android:layout_marginTop="@dimen/gap_16"
                android:layout_marginBottom="@dimen/gap_16"
                android:src="@drawable/ic_logo"
                app:layout_constraintBottom_toTopOf="@id/barrier_for_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_for_switch"
                style="@style/caption_1.bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/gap_4"
                android:text="@string/label_for_switch_compat"
                android:textColor="@color/c_313030"
                app:layout_constraintBottom_toBottomOf="@id/switch_compat"
                app:layout_constraintEnd_toStartOf="@id/switch_compat"
                app:layout_constraintTop_toTopOf="@id/switch_compat" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_compat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/gap_16"
                app:layout_constraintBottom_toBottomOf="@id/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/logo"
                app:thumbTint="@color/white"
                app:track="@drawable/track" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/switch_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="text_view_for_switch, switch_compat"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_for_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="logo, text_view_for_switch, switch_compat" />

            <kr.co.soogong.master.atomic.molecules.FootnoteContentIcon
                android:id="@+id/summary_of_request"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/gap_16"
                android:layout_marginTop="@dimen/gap_16"
                android:background="@drawable/shape_white_background_radius15"
                android:elevation="@dimen/gap_1"
                app:count="@{0}"
                app:footnote="@{@string/summary_label_for_request}"
                app:icon="@{@drawable/ic_chat}"
                app:layout_constraintDimensionRatio="H, 5:6"
                app:layout_constraintEnd_toStartOf="@id/summary_of_progress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrier_for_header"
                app:layout_constraintWidth_percent="0.28" />

            <kr.co.soogong.master.atomic.molecules.FootnoteContentIcon
                android:id="@+id/summary_of_progress"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/gap_14"
                android:layout_marginEnd="@dimen/gap_14"
                android:background="@drawable/shape_white_background_radius15"
                android:elevation="@dimen/gap_1"
                app:count="@{0}"
                app:footnote="@{@string/summary_label_for_progress}"
                app:icon="@{@drawable/ic_ruler}"
                app:layout_constraintDimensionRatio="H, 5:6"
                app:layout_constraintEnd_toStartOf="@id/summary_of_completion"
                app:layout_constraintStart_toEndOf="@id/summary_of_request"
                app:layout_constraintTop_toTopOf="@id/summary_of_request"
                app:layout_constraintWidth_percent="0.28" />

            <kr.co.soogong.master.atomic.molecules.FootnoteContentIcon
                android:id="@+id/summary_of_completion"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/gap_16"
                android:background="@drawable/shape_white_background_radius15"
                android:elevation="@dimen/gap_1"
                app:count="@{0}"
                app:footnote="@{@string/summary_label_for_completion}"
                app:icon="@{@drawable/ic_hammer}"
                app:layout_constraintDimensionRatio="H, 5:6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/summary_of_progress"
                app:layout_constraintTop_toTopOf="@id/summary_of_request"
                app:layout_constraintWidth_percent="0.28" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_for_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="summary_of_request, summary_of_progress, summary_of_completion" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/new_requirements_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/gap_16"
                android:layout_marginTop="@dimen/gap_16"
                android:layout_marginEnd="@dimen/gap_16"
                android:layout_marginBottom="@dimen/gap_16"
                android:background="@drawable/shape_white_background_radius15"
                android:elevation="@dimen/gap_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_min="@dimen/gap_350"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrier_for_summary" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/new_requirements_container_label"
                style="@style/call_out.bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_16"
                android:layout_marginTop="@dimen/gap_16"
                android:elevation="@dimen/gap_1"
                android:text="@string/new_requirements_container_label"
                android:textColor="@color/c_535353"
                app:layout_constraintStart_toStartOf="@id/new_requirements_container"
                app:layout_constraintTop_toTopOf="@id/new_requirements_container" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/new_requirements_container_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/gap_16"
                android:elevation="@dimen/gap_1"
                android:src="@drawable/ic_arrow_right"
                app:layout_constraintBottom_toBottomOf="@id/new_requirements_container_label"
                app:layout_constraintEnd_toEndOf="@id/new_requirements_container"
                app:layout_constraintTop_toTopOf="@id/new_requirements_container_label" />

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="@dimen/gap_0"
                android:layout_height="@dimen/gap_0"
                android:layout_marginStart="@dimen/gap_16"
                android:layout_marginTop="@dimen/gap_16"
                android:layout_marginEnd="@dimen/gap_16"
                android:layout_marginBottom="@dimen/gap_16"
                android:elevation="@dimen/gap_1"
                app:layout_constraintBottom_toBottomOf="@id/new_requirements_container"
                app:layout_constraintEnd_toEndOf="@id/new_requirements_container"
                app:layout_constraintStart_toStartOf="@id/new_requirements_container"
                app:layout_constraintTop_toBottomOf="@id/new_requirements_container_label"
                app:onRefresh="@{vm::initListUnread}"
                app:setLoadingColor="@{R.color.app_color}">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/new_requirements_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:simple_requirement_cards="@{vm.requirements}"
                    tools:listitem="@layout/view_holder_simple_requirement_item" />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>