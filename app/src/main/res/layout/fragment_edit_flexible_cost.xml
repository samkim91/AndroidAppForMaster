<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/bind"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="kr.co.soogong.master.ui.profile.edit.flexiblecost.EditFlexibleCostViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/gap_20"
                android:paddingTop="@dimen/gap_8"
                android:paddingEnd="@dimen/gap_20"
                android:paddingBottom="@dimen/gap_52">

                <kr.co.soogong.master.ui.widget.TitleChipGroup
                    android:id="@+id/travel_cost_chip_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:title='@{"현장 가격 변동 사항을 선택해주세요."}'
                    app:subTitle='@{"출장비"}'
                    app:subTitleVisible="@{true}"
                    app:blackSubTitle="@{true}"
                    />

                <kr.co.soogong.master.ui.widget.TitleChipGroup
                    android:id="@+id/crane_usage_chip_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/travel_cost_chip_group"
                    app:titleVisible="@{false}"
                    app:subTitle='@{"크레인 사용"}'
                    app:subTitleVisible="@{true}"
                    app:blackSubTitle="@{true}"
                    />

                <kr.co.soogong.master.ui.widget.TitleChipGroup
                    android:id="@+id/package_cost_chip_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/crane_usage_chip_group"
                    app:titleVisible="@{false}"
                    app:subTitle='@{"짐 정리 비용"}'
                    app:subTitleVisible="@{true}"
                    app:blackSubTitle="@{true}"
                    />

                <kr.co.soogong.master.ui.widget.TitleEditTextCounterView
                    android:id="@+id/other_cost_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/package_cost_chip_group"
                    app:titleVisible="@{false}"
                    app:subTitle='@{"기타 변동 가능 사항"}'
                    app:subTitleVisible="@{true}"
                    app:hintText='@{"현장에서 견적가격이 변동될 수 있는 사항을 입력해주세요."}'
                    app:limitedCount="@{500}"
                    app:alertText='@{"필수 정보입니다. 10자 이상으로 입력해주세요."}'
                    app:blackSubTitle="@{true}"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/default_button"
            style="@style/medium_text_style.bold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/color_22D47B"
            android:text="@string/writing_done"
            android:textColor="@color/basic_white" />
    </LinearLayout>

</layout>