<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.profile.edit.requiredinformation.introduction.EditIntroductionViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/gap_20"
                android:paddingTop="@dimen/gap_32"
                android:paddingEnd="@dimen/gap_20"
                android:paddingBottom="@dimen/gap_52">

                <kr.co.soogong.master.ui.widget.TitleEditTextCounterView
                    android:id="@+id/introduction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:alertText='@{"10자 이상으로 입력해주세요."}'
                    app:blackSubTitle="@{false}"
                    app:hintText='@{"예시) 강남 지역 30년 역사의 싱크대 장인! 믿고 맡겨주세요!"}'
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:limitedCount='@{100}'
                    app:content="@={vm.introduction}"
                    app:subTitle='@{"업체이름과 함께 소개 영역에 들어가는 내용입니다. 고객에게 남기실 업체만의 특별한 점을 소개해주세요!"}'
                    app:title='@{"간단한 업체 소개를 해주세요."}' />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/default_button"
            style="@style/medium_text_style.bold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/color_22D47B"
            android:text="@string/save"
            android:textColor="@color/basic_white" />
    </LinearLayout>

</layout>