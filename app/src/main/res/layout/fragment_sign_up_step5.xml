<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.auth.signup.SignUpViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <kr.co.soogong.master.ui.widget.LargeTitleSubtitle
                android:id="@+id/title_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_40"
                android:layout_marginEnd="@dimen/gap_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:subTitle='@{"중복선택 가능합니다."}'
                app:subTitleVisible="@{true}"
                app:title='@{"시공 가능 업종을 선택해주세요."}' />

            <kr.co.soogong.master.ui.widget.TitleEditTextButton
                android:id="@+id/business_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_19"
                android:layout_marginEnd="@dimen/gap_20"
                app:alertText='@{"필수 정보입니다."}'
                app:buttonText='@{"선택"}'
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_widget"
                app:setFirstEditTextHint='@{"시공 가능한 업종을 선택해주세요."}'
                app:titleVisible="@{false}"
                app:setSecondEditTextVisible="@{false}"
                app:setFirstEditTextEnable="@{false}"
                />

            <LinearLayout
                android:id="@+id/business_type_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginEnd="@dimen/gap_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/business_type"
                app:layout_constraintBottom_toTopOf="@id/default_button"
                app:layout_constraintVertical_chainStyle="spread_inside"
                android:orientation="vertical" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/default_button"
                style="@style/medium_text_style.bold"
                android:layout_width="@dimen/gap_0"
                android:layout_height="@dimen/gap_48"
                android:background="@color/color_22D47B"
                android:text="@string/next_button_text"
                android:textColor="@color/basic_white"
                app:layout_constraintTop_toBottomOf="@id/business_type_container"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_chainStyle="spread_inside"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>