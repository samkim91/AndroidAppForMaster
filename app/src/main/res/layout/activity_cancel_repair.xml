<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.requirement.action.cancel.CancelRepairViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/action_bar"
            layout="@layout/action_bar_button" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cancel_option_label"
                    style="@style/text_style_16sp.medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cancel_estimation_default_margin_start_20"
                    android:layout_marginTop="@dimen/cancel_estimation_margin_top_52"
                    android:layout_marginEnd="@dimen/cancel_estimation_default_margin_end_20"
                    android:text="@string/cancel_estimate_cancel_option_label"
                    android:textColor="@color/text_basic_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioGroup
                    android:id="@+id/cancel_option"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cancel_estimation_margin_start_15"
                    android:layout_marginTop="@dimen/cancel_estimation_margin_top_6"
                    android:layout_marginEnd="@dimen/cancel_estimation_default_margin_end_20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cancel_option_label">

                    <RadioButton
                        android:id="@+id/cancel_option_1"
                        style="@style/text_style_14sp.medium"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="@string/cancel_estimate_cancel_option_1"
                        android:textColor="@color/text_basic_color"
                        tools:checked="true" />

                    <RadioButton
                        android:id="@+id/cancel_option_2"
                        style="@style/text_style_14sp.medium"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="@string/cancel_estimate_cancel_option_2"
                        android:textColor="@color/text_basic_color" />

                    <RadioButton
                        android:id="@+id/cancel_option_3"
                        style="@style/text_style_14sp.medium"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="@string/cancel_estimate_cancel_option_3"
                        android:textColor="@color/text_basic_color" />

                    <RadioButton
                        android:id="@+id/cancel_option_4"
                        style="@style/text_style_14sp.medium"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="@string/cancel_estimate_cancel_option_4"
                        android:textColor="@color/text_basic_color" />
                </RadioGroup>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/alert"
                    style="@style/text_style_14sp.regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cancel_estimation_default_margin_start_20"
                    android:layout_marginTop="@dimen/cancel_estimation_margin_top_4"
                    android:layout_marginEnd="@dimen/cancel_estimation_default_margin_end_20"
                    android:text="@string/alert_required_field"
                    android:textColor="@color/text_alert_color"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cancel_option" />

                <kr.co.soogong.master.ui.widget.TitleEditTextCounterView
                    android:id="@+id/cancel_option_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cancel_estimation_default_margin_start_20"
                    android:layout_marginTop="@dimen/cancel_estimation_margin_top_52"
                    android:layout_marginEnd="@dimen/cancel_estimation_default_margin_end_20"
                    app:hintText='@{"취소 사유에 대해 더 하고 싶은 말이 있으시면 작성해주세요."}'
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cancel_option"
                    app:limitedCount='@{100}'
                    app:content="@={vm.canceledDescription}"
                    app:title='@{"상세 내용을 입력해주세요. (선택)"}' />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</layout>