<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.auth.signup.SignUpViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <kr.co.soogong.master.atomic.molecules.LargeTitleSubtitle
                android:id="@+id/title_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_40"
                android:layout_marginEnd="@dimen/gap_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:subTitle='@{"중복선택 가능합니다."}'
                app:subTitleVisible="@{true}"
                app:title='@{"시공 가능 업종을 선택해주세요."}' />

            <kr.co.soogong.master.atomic.molecules.TitleEditTextButton
                android:id="@+id/major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_19"
                android:layout_marginEnd="@dimen/gap_20"
                app:alertText='@{"필수 정보입니다."}'
                app:buttonText='@{"선택"}'
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_widget"
                app:setFirstEditTextEnable="@{false}"
                app:setFirstEditTextHint='@{"시공 가능한 업종을 선택해주세요."}'
                app:setSecondEditTextVisible="@{false}"
                app:titleVisible="@{false}" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cg_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_24"
                android:layout_marginEnd="@dimen/gap_20"
                app:chipSpacingHorizontal="@dimen/gap_2"
                app:chipSpacingVertical="@dimen/gap_4"
                app:layout_constraintBottom_toTopOf="@id/default_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/major"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/default_button"
                style="@style/text_style_16sp.bold"
                android:layout_width="@dimen/gap_0"
                android:layout_height="@dimen/gap_48"
                android:background="@color/c_22D47B"
                android:text="@string/next"
                android:textColor="@color/c_FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cg_container"
                app:layout_constraintVertical_chainStyle="spread_inside" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>