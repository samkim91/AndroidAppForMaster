<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/drawer_label"
            style="@style/text_style_18sp.bold"
            android:layout_width="@dimen/gap_0"
            android:layout_height="@dimen/gap_50"
            android:layout_marginStart="@dimen/gap_20"
            android:layout_marginEnd="@dimen/gap_20"
            android:gravity="center_vertical"
            android:textColor="@color/c_404040"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="고객 요청 내용" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/drawer_icon"
            android:layout_width="@dimen/gap_24"
            android:layout_height="@dimen/gap_24"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintBottom_toBottomOf="@id/drawer_label"
            app:layout_constraintEnd_toEndOf="@id/drawer_label"
            app:layout_constraintTop_toTopOf="@id/drawer_label" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/thin_line"
            android:layout_width="0dp"
            android:layout_height="@dimen/line_height"
            android:background="@color/line_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drawer_label" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/detail_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap_20"
            android:layout_marginTop="@dimen/gap_12"
            android:layout_marginEnd="@dimen/gap_20"
            android:orientation="vertical"
            android:paddingBottom="@dimen/gap_24"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/thin_line" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/thick_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_10"
            android:background="@drawable/thick_shading_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_container" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>