<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/bind"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="kr.co.soogong.master.R" />

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.requirement.action.search.SearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <kr.co.soogong.master.atomic.molecules.SearchBar
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap_15"
            android:layout_marginTop="@dimen/gap_28"
            android:layout_marginEnd="@dimen/gap_15"
            app:cancelTextVisibility="@{true}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:searchBarContent="@={vm.searchingText}"
            app:searchTextHint="@{@string/search_bar_hint_text}" />

        <Spinner
            android:id="@+id/spinner"
            style="@style/text_style_15sp.medium"
            android:layout_width="@dimen/gap_90"
            android:layout_height="@dimen/gap_40"
            android:layout_marginTop="@dimen/gap_16"
            android:background="@drawable/shape_white_background_gray_border_radius80"
            app:layout_constraintStart_toStartOf="@id/search_bar"
            app:layout_constraintTop_toBottomOf="@id/search_bar"
            app:setItems="@{vm.spinnerItems}" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dropdown_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/gap_16"
            android:background="@drawable/ic_dropdown_arrow"
            app:layout_constraintBottom_toBottomOf="@id/spinner"
            app:layout_constraintEnd_toEndOf="@id/spinner"
            app:layout_constraintTop_toTopOf="@id/spinner" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/line"
            android:layout_width="@dimen/gap_0"
            android:layout_height="@dimen/gap_1"
            android:layout_marginTop="@dimen/gap_15"
            android:background="@color/c_E3E3E3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/gap_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:onRefresh="@{vm::searchRequirements}"
            app:setLoadingColor="@{R.color.app_color}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/requirements"
                android:layout_width="@dimen/gap_0"
                android:layout_height="@dimen/gap_0"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:setDivider="@{@drawable/thick_divider}"
                app:requirement_cards="@{vm.requirements}"
                tools:listitem="@layout/view_holder_requirement_item" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/empty_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_no_card"
            app:layout_constraintBottom_toTopOf="@id/empty_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/swipe_refresh_layout"
            app:layout_constraintVertical_chainStyle="packed"
            bind:visible="@{vm.requirements.empty}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/empty_text"
            style="@style/text_style_18sp.bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/requirements_not_found"
            android:textColor="@color/c_BDBDBD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/empty_icon"
            bind:visible="@{vm.requirements.empty}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>