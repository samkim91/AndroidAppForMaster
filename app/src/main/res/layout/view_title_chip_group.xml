<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            style="@style/medium_text_style.bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_basic_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="사업자 등록여부를 알려주세요." />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sub_title"
            style="@style/small_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/color_616161"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:text="서브로 적는 내용들" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:singleSelection="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sub_title">

            <com.google.android.material.chip.Chip
                android:id="@+id/option_1"
                android:layout_width="@dimen/chips_width_156dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                style="@style/ChipStyles"
                tools:text="개인사업자" />

            <com.google.android.material.chip.Chip
                android:id="@+id/option_2"
                android:layout_width="@dimen/chips_width_156dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                style="@style/ChipStyles"
                tools:text="법인사업자"
                />

            <com.google.android.material.chip.Chip
                android:id="@+id/option_3"
                android:layout_width="@dimen/chips_width_156dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:visibility="gone"
                style="@style/ChipStyles"
                tools:text="프리랜서"
                />
        </com.google.android.material.chip.ChipGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/alert"
            style="@style/small_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_alert_color"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_group"
            tools:text="견적은 1만원 이상으로 보내주세요." />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>