<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.auth.signup.SignUpViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <kr.co.soogong.master.ui.atomic.molecules.LargeTitleSubtitle
                android:id="@+id/title_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_40"
                android:layout_marginEnd="@dimen/gap_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title='@{"서비스 가능한 범위를 선택해주세요."}' />

            <kr.co.soogong.master.ui.atomic.molecules.TitleDropdown
                android:id="@+id/service_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_20"
                android:layout_marginEnd="@dimen/gap_20"
                app:content="@={vm.serviceArea}"
                app:hintText='@{"범위를 선택해주세요."}'
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_widget"
                app:titleVisible="@{false}" />

            <androidx.cardview.widget.CardView
                android:id="@+id/map_view_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/gap_180"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_8"
                android:layout_marginEnd="@dimen/gap_20"
                app:cardCornerRadius="@dimen/gap_8"
                app:cardElevation="@dimen/gap_0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/service_area">

                <FrameLayout
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/alert_service_area_required"
                style="@style/text_style_14sp.regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_4"
                android:text="@string/required_field_alert"
                android:textColor="@color/c_FF711D"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/map_view_card" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/default_button"
                style="@style/text_style_16sp.bold"
                android:layout_width="@dimen/gap_0"
                android:layout_height="@dimen/gap_48"
                android:background="@color/c_22D47B"
                android:text="@string/next"
                android:textColor="@color/c_FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>