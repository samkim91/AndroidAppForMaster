<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/gap_1">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search"
            android:elevation="@dimen/gap_1"
            android:layout_marginStart="@dimen/gap_16"
            app:layout_constraintTop_toTopOf="@id/search_text"
            app:layout_constraintBottom_toBottomOf="@id/search_text"
            app:layout_constraintStart_toStartOf="@id/search_text"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search_text"
            style="@style/text_style_14sp.medium"
            android:layout_width="@dimen/gap_0"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gray_background_gray_border_radius33"
            android:paddingStart="@dimen/gap_45"
            android:paddingTop="@dimen/gap_10"
            android:paddingEnd="@dimen/gap_16"
            android:paddingBottom="@dimen/gap_10"
            android:textColorHint="@color/text_hint_color"
            android:textColor="@color/color_2E2E2E"
            android:singleLine="true"
            android:maxLength="20"
            app:layout_constraintEnd_toStartOf="@id/cancel_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:hint="프로젝트 또는 주소로 검색해 보세요." />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cancel_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cancel"
            android:elevation="@dimen/gap_1"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginEnd="@dimen/gap_16"
            app:layout_constraintTop_toTopOf="@id/search_text"
            app:layout_constraintBottom_toBottomOf="@id/search_text"
            app:layout_constraintEnd_toEndOf="@id/search_text"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cancel_text"
            style="@style/text_style_14sp.medium"
            android:text="@string/cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="@color/color_000000"
            android:layout_marginStart="@dimen/gap_8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/search_text"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>