<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/bind"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="kr.co.soogong.master.data.notice.Notice" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/action_bar"
            layout="@layout/action_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/notice_detail_margin_start"
                android:layout_marginEnd="@dimen/notice_detail_margin_end">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/notice_title"
                    style="@style/medium_text_style.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/notice_detail_title_margin_top"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="@{data.title}"
                    android:textColor="@color/text_basic_color"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toTopOf="@id/notice_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="수공 마스터 앱 런칭 기념 이벤트를 진행합니다!수공 마스터 앱 런칭 기념 이벤트를 진행합니다!" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/notice_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/notice_detail_date_margin_top"
                    android:textColor="@color/text_primary_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/notice_title"
                    bind:date_text2="@{data.date}"
                    tools:text="2020. 8. 26" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/line"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginTop="@dimen/notice_detail_line_margin_top"
                    android:background="@color/line_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/notice_date" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/notice_content"
                    style="@style/medium_text_style.regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/notice_detail_content_margin_top"
                    android:lineSpacingExtra="@dimen/notice_detail_content_line_spacing"
                    android:text="@{data.content}"
                    android:textColor="@color/text_basic_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    tools:text="다른 업체보다 빠르고 정확한 시공을 자신합니다. 시공 후 문제가 생긴다면 책임지고 A/S 해드려요. 연락주시면 더 정확한 안내가 가능합니다. 다른 업체보다 빠르고 정확한 시공을 자신합니다." />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</layout>