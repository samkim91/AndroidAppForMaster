<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/bind"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.requirements.received.detail.ReceivedDetailViewModel" />

        <variable
            name="acceptClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="deinedClick"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/action_bar"
            layout="@layout/action_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/category"
                        style="@style/big_text_style.bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{vm.project}"
                        android:textColor="@color/primary_text_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="욕실장" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/time"
                        style="@style/small_text_style.medium"
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:textColor="@color/secondary_text_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/category"
                        bind:date_text="@{vm.date}"
                        tools:text="2020. 8. 26  13:53" />

                    <LinearLayout
                        android:id="@+id/content_frame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toTopOf="@id/detail"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/time" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/accept"
                        style="@style/medium_text_style.bold"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="48dp"
                        android:background="@drawable/shape_fill_green_background"
                        android:onClick="@{acceptClick}"
                        android:text="견적서 작성하기"
                        android:textColor="@color/basic_white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/denied"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/detail"
                        app:layout_goneMarginEnd="0dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/denied"
                        style="@style/medium_text_style.bold"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="48dp"
                        android:background="@drawable/shape_fill_transparent_board_green"
                        android:onClick="@{deinedClick}"
                        android:text="거절하기"
                        android:textColor="@color/app_color"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/accept"
                        app:layout_constraintTop_toBottomOf="@id/content_frame" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>