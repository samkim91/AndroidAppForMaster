<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.profile.detail.freeMeasure.EditFreeMeasureViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/gap_20"
                android:paddingTop="@dimen/gap_32"
                android:paddingEnd="@dimen/gap_20"
                android:paddingBottom="@dimen/gap_52">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    style="@style/text_style_16sp.medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_free_measure_fragment_title"
                    android:textColor="@color/text_basic_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <kr.co.soogong.master.ui.widget.TextCheckBox
                    android:id="@+id/agree_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_32"
                    app:check="@{vm.agree}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    app:text="@{@string/edit_free_measure_fragment_agree_text}" />

                <kr.co.soogong.master.ui.widget.TextCheckBox
                    android:id="@+id/disagree_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_12"
                    app:check="@{vm.disagree}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/agree_checkbox"
                    app:text="@{@string/edit_free_measure_fragment_disagree_text}" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/default_button"
            style="@style/text_style_16sp.bold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/color_22D47B"
            android:text="@string/save"
            android:textColor="@color/basic_white" />
    </LinearLayout>

</layout>