        <item name="errorTextAppearance">@style/caption_1.regular</item>
        <item name="errorTextColor">@color/brand_red</item>

        <item name="shapeAppearance">@style/outlinedTextareaShapeAppearance</item>
        <item name="shapeAppearanceOverlay">@null</item>
