                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/profile_card_container_label"
                    style="@style/medium_text_style.medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:text="@string/profile_card_container_label"
                    android:textColor="@color/color_121212"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <!-- 포트폴리오 -->
                <kr.co.soogong.master.ui.widget.ProfileDefaultCard
                    android:id="@+id/portfolio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_16"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_radius8_white_background"
                    android:elevation="@dimen/gap_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_card_container_label"
                    app:subTitle='@{"실제 시공 정보와 사진이 쌓일 수록 고객의 신뢰감도 함께 쌓입니다."}'
                    app:subTitleVisible="@{true}"
                    app:title='@{"포트폴리오"}' />

