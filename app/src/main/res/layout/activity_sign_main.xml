<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.auth.SignMainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sign_main_background_color">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/background_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_up_logo_margin_top"
            android:src="@drawable/ic_logo_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/text_style_14sp.regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_up_master_description_margin_top"
            android:gravity="center"
            android:text="@string/sign_up_master_description"
            android:textColor="@color/secondary_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_in"
            style="@style/text_style_16sp.bold"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginStart="@dimen/sign_in_button_margin_start"
            android:layout_marginEnd="@dimen/sign_in_button_margin_end"
            android:layout_marginBottom="@dimen/sign_up_activity_button_margin_bottom"
            android:background="@drawable/shape_fill_white_board_green"
            android:onClick="@{() -> vm.signInAction()}"
            android:text="@string/sign_up_sign_in_button_text"
            android:textColor="@color/color_1FC472"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sign_up"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_up"
            style="@style/text_style_16sp.bold"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginStart="@dimen/sign_up_button_margin_start"
            android:layout_marginEnd="@dimen/sign_up_button_margin_end"
            android:layout_marginBottom="@dimen/sign_up_activity_button_margin_bottom"
            android:background="@drawable/shape_fill_green_background"
            android:onClick="@{() -> vm.signUpAction()}"
            android:text="@string/sign_up_sign_up_button_text"
            android:textColor="@color/basic_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/sign_in" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>