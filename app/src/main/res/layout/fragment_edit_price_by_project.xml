<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/bind"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.profile.edit.withcard.pricebyproject.EditPriceByProjectViewModel" />

        <variable
            name="inputType"
            type="android.text.InputType" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <kr.co.soogong.master.ui.widget.TitleEditText
                    android:id="@+id/project_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_32"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginEnd="@dimen/gap_20"
                    app:alertText='@{"필수 정보입니다."}'
                    app:content="@={vm.title}"
                    app:hintText='@{"시공 종류를 적어주세요."}'
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:title='@{"시공 종류"}' />

                <kr.co.soogong.master.ui.widget.TitleEditText
                    android:id="@+id/project_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_28"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginEnd="@dimen/gap_20"
                    app:alertText='@{"필수 정보입니다."}'
                    app:content="@={vm.price}"
                    app:hintText='@{"해당 시공의 단가 숫자로 입력해주세요. (단위 : 원)"}'
                    app:setInputType="@{inputType.TYPE_CLASS_NUMBER}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/project_title"
                    app:title='@{"가격"}' />

                <kr.co.soogong.master.ui.widget.TitleEditCountBoxView
                    android:id="@+id/job_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_28"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginEnd="@dimen/gap_20"
                    app:content="@={vm.description}"
                    app:hintText='@{"시공에 대한 간단한 설명을 입력해주세요."}'
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/project_price"
                    app:limitedCount='@{100}'
                    app:title='@{"시공 설명 (선택)"}' />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/small_text_style.medium"
                    android:background="@color/color_F8F8F8"
                    android:textColor="@color/color_616161"
                    android:layout_marginTop="@dimen/gap_52"
                    android:paddingStart="@dimen/gap_20"
                    android:paddingTop="@dimen/gap_24"
                    android:paddingBottom="@dimen/gap_24"
                    android:paddingEnd="@dimen/gap_20"
                    app:layout_constraintTop_toBottomOf="@id/job_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/example_for_edit_price_by_project"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/default_button"
            style="@style/medium_text_style.bold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/color_22D47B"
            android:text="@string/writing_done"
            android:textColor="@color/basic_white" />
    </LinearLayout>

</layout>