<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/c_69A9F1</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/brand_green</item>
        <item name="colorSecondary">@color/brand_blue</item>
        <item name="colorError">@color/brand_red</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="textAppearanceCaption">@style/caption_1.regular</item>
    </style>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <!-- Fonts -->
    <style name="caption_2">
        <item name="android:textSize">@dimen/text_size_11sp</item>
    </style>

    <style name="caption_2.regular" parent="caption_2">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="caption_2.bold" parent="caption_2">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="caption_1">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="caption_1.regular" parent="caption_1">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="caption_1.bold" parent="caption_1">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="footnote">
        <item name="android:textSize">@dimen/text_size_13sp</item>
    </style>

    <style name="footnote.regular" parent="footnote">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="footnote.bold" parent="footnote">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="subheadline">
        <item name="android:textSize">@dimen/text_size_15sp</item>
    </style>

    <style name="subheadline.regular" parent="subheadline">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="subheadline.bold" parent="subheadline">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="call_out">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="call_out.regular" parent="call_out">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="call_out.bold" parent="call_out">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="body">
        <item name="android:textSize">@dimen/text_size_17sp</item>
    </style>

    <style name="body.bold" parent="body">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="headline">
        <item name="android:textSize">@dimen/text_size_17sp</item>
    </style>

    <style name="headline.bold" parent="headline">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="title_3">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="title_3.regular" parent="title_3">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="title_3.bold" parent="title_3">
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="roundCorner30">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/gap_30</item>
    </style>

    <style name="roundCorner10">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- start TextInput styles -->
    <style name="outlinedTextInputLayout">
        <item name="android:textAppearance">@style/subheadline.regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/light_grey_2</item>

        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@null</item>
        <item name="boxStrokeWidth">@dimen/gap_1</item>
        <item name="boxStrokeWidthFocused">@dimen/gap_1</item>
        <item name="boxStrokeColor">@color/selector_light_grey2_default_green_enabled_focused</item>
        <item name="boxStrokeErrorColor">@color/brand_red</item>

        <item name="counterTextAppearance">@style/caption_1.regular</item>
        <item name="counterTextColor">@color/light_grey_2</item>
        <item name="hintTextAppearance">@style/caption_1.regular</item>
        <item name="hintTextColor">@color/brand_green</item>
        <item name="android:textColorHint">@color/light_grey_2</item>
        <item name="errorTextAppearance">@style/caption_1.regular</item>
        <item name="errorTextColor">@color/brand_red</item>

        <item name="shapeAppearance">@style/roundCorner10</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="outlinedTextInputEditText">
        <item name="android:padding">@dimen/gap_14</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/call_out.regular</item>
    </style>
    <!-- end TextInput styles -->

    <!-- Dropdown styles -->
    <style name="outlinedTextInputLayout.dropdown" parent="outlinedTextInputLayout">
        <item name="endIconMode">dropdown_menu</item>
        <item name="endIconTint">@color/dark_grey_2</item>
        <item name="shapeAppearance">@style/roundCorner10</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="outlinedTextInputLayout.dropdown.small" parent="outlinedTextInputLayout.dropdown">
        <item name="shapeAppearance">@style/roundCorner30</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="autoCompleteTextViewStyle" parent="outlinedTextInputEditText">
        <item name="android:dropDownHeight">@dimen/gap_250</item>
        <item name="android:dropDownVerticalOffset">@dimen/gap_4</item>
    </style>
    <!-- end Dropdown styles -->

    <!-- start section 버튼 스타일 -->
    <style name="button">
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- 버튼 small -->

    <!-- 버튼 medium -->
    <style name="button.medium" parent="button">
        <item name="android:textAppearance">@style/subheadline.bold</item>
        <item name="android:layout_height">@dimen/gap_48</item>
        <item name="android:layout_width">@dimen/gap_0</item>
    </style>

    <style name="button.medium.primary" parent="button.medium">
        <item name="android:background">@drawable/bg_solid_green_selector_radius8</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button.medium.secondary" parent="button.medium">
        <item name="android:background">@drawable/bg_solid_light_grey1_selector_radius8</item>
        <item name="android:textColor">@color/selector_dark_grey1_alpha50</item>
    </style>

    <style name="button.medium.outlined_primary" parent="button.medium">
        <item name="android:background">@drawable/bg_solid_white_stroke_green_selector_radius8
        </item>
        <item name="android:textColor">@color/selector_green_alpha50</item>
    </style>

    <style name="button.medium.outlined_secondary" parent="button.medium">
        <item name="android:background">
            @drawable/bg_solid_white_stroke_light_grey2_selector_radius8
        </item>
        <item name="android:textColor">@color/selector_dark_grey1_alpha50</item>
    </style>

    <!-- 버튼 big -->
    <style name="button.big" parent="button">
        <item name="android:textAppearance">@style/call_out.regular</item>
        <item name="android:layout_height">@dimen/gap_56</item>
        <item name="android:layout_width">@dimen/gap_0</item>
    </style>

    <style name="button.big.primary" parent="button.big">
        <item name="android:background">@drawable/bg_solid_green_selector_radius8</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button.big.outlined_primary" parent="button.big">
        <item name="android:background">@drawable/bg_solid_white_stroke_green_selector_radius8
        </item>
        <item name="android:textColor">@color/selector_green_alpha50</item>
    </style>

    <!-- 버튼 filled -->

    <!-- end section 버튼 스타일 -->

    <style name="check_box_rectangle">
        <item name="android:textAppearance">@style/call_out.regular</item>
        <item name="android:button">@drawable/check_box_rectangle</item>
        <item name="android:paddingStart">@dimen/gap_8</item>
        <item name="android:paddingEnd">@dimen/gap_0</item>
        <item name="android:textColor">@color/dark_grey_2</item>
    </style>

    <style name="radio_button">
        <item name="android:textAppearance">@style/call_out.regular</item>
        <item name="android:button">@drawable/radio_button</item>
        <item name="android:paddingStart">@dimen/gap_8</item>
        <item name="android:paddingEnd">@dimen/gap_0</item>
        <item name="android:textColor">@color/dark_grey_2</item>
    </style>

    <style name="ChipChoiceGreyRectangular" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background</item>
        <item name="chipCornerRadius">@dimen/gap_4</item>
    </style>

    <style name="ChipChoiceRectangularStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/selector_green_grey2</item>
        <item name="android:textAppearance">@style/call_out.bold</item>
        <item name="chipStrokeColor">@color/selector_green_light_grey2</item>
        <item name="chipMinTouchTargetSize">@dimen/gap_0</item>
        <item name="chipStrokeWidth">@dimen/gap_1</item>
        <item name="chipCornerRadius">@dimen/gap_8</item>
        <item name="chipMinHeight">@dimen/gap_48</item>
    </style>

    <style name="ChipChoiceRoundStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/grey_3</item>
        <item name="android:textAppearance">@style/caption_2.bold</item>
        <item name="chipStrokeColor">@color/light_grey_2</item>
        <item name="chipMinTouchTargetSize">@dimen/gap_0</item>
        <item name="chipStrokeWidth">@dimen/gap_1</item>
        <item name="chipCornerRadius">@dimen/gap_20</item>
        <item name="chipMinHeight">@dimen/gap_25</item>
    </style>

    <style name="ChipEntryRoundStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/background</item>
        <item name="android:textColor">@color/grey_2</item>
        <item name="chipStrokeColor">@color/light_grey_2</item>
        <item name="chipStrokeWidth">@dimen/gap_1</item>
        <item name="chipMinTouchTargetSize">@dimen/gap_0</item>
        <item name="closeIcon">@drawable/ic_cancel</item>
        <item name="closeIconTint">@color/light_grey_2</item>
        <item name="chipCornerRadius">@dimen/gap_20</item>
        <item name="chipMinHeight">@dimen/gap_34</item>
    </style>

    <style name="CalenderViewCustom">
        <item name="colorAccent">@color/brand_green</item>
        <item name="android:dateTextAppearance">@style/subheadline.bold</item>
        <item name="android:weekDayTextAppearance">@style/subheadline.bold</item>
        <item name="android:colorForeground">@color/text_basic_color</item>
    </style>
</resources>