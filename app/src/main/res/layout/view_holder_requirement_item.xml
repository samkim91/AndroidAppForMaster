<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/bind"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.requirements.card.RequirementCard" />

        <variable
            name="card_click_listener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{card_click_listener}"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="16dp">

        <!-- region 기본요소 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/status_text"
            style="@style/small_text_style.bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/color_1FC472"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:estimation_status="@{vm.status}"
            tools:text="견적요청" />

        <FrameLayout
            android:id="@+id/new_badge"
            android:layout_width="@dimen/notice_view_holder_badge_width"
            android:layout_height="@dimen/notice_view_holder_badge_height"
            android:layout_marginStart="4dp"
            android:background="@drawable/badge_background"
            app:layout_constraintBottom_toBottomOf="@id/status_text"
            app:layout_constraintStart_toEndOf="@id/status_text"
            app:layout_constraintTop_toTopOf="@id/status_text">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/badge_text"
                android:textColor="@color/basic_white"
                android:textSize="@dimen/notice_view_holder_badge_text_size"
                android:textStyle="bold" />
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/status_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{vm.statusDetailText}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="견적서를 작성해주세요" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="@dimen/actionbar_title_under_line_height"
            android:layout_marginTop="13dp"
            android:background="@color/line_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/status_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/request_id"
            style="@style/medium_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{vm.keyCode}"
            android:textColor="@color/text_primary_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            tools:text="5156161" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/location"
            style="@style/big_text_style.bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{vm.address}"
            android:textColor="@color/primary_text_color"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/arrow_button"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/request_id"
            tools:text="서울시 관악구 봉천동 70 봉천동 70 123-124" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/type"
            style="@style/big_text_style.bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{vm.project}"
            android:textColor="@color/primary_text_color"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/arrow_button"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location"
            tools:text="욕실 위생도기 및 수전 설치/교체 123123123123" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/first_time"
            style="@style/small_text_style.medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/tertiary_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/type"
            bind:start_date="@{vm.createdAt}"
            tools:text="최초 요청일 : 2021.01.11 - 13:20" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintBottom_toBottomOf="@id/type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/location" />
        <!-- endregion -->

        <!-- region 견적요청 -->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/end_time"
            style="@style/small_text_style.medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/alert_color"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_time"
            tools:text="견적 마감일 : 2021.01.12 - 01:20" />
        <!-- endregion -->

        <!-- region 매칭대기 -->

        <kr.co.soogong.master.ui.widget.AmountView
            android:id="@+id/my_amount"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/waiting_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_time" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/waiting_label"
            style="@style/small_text_style.medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/requirements_card_waiting_label"
            android:textColor="@color/alert_color"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_amount" />
        <!-- endregion -->

        <!-- region 시공진행중 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/call_button"
            style="@style/medium_text_style.bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/shape_fill_transparent_board_green"
            android:text="@string/requirements_card_call_button"
            android:textColor="@color/color_1FC472"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/done_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_amount" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/done_button"
            style="@style/medium_text_style.bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_fill_green_background"
            android:text="@string/requirements_card_done_button"
            android:textColor="@color/basic_white"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/call_button"
            app:layout_constraintTop_toBottomOf="@id/my_amount" />
        <!-- endregion -->

        <!-- region 고객완료요청 -->
        <!-- endregion -->

        <!-- region 시공완료 -->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/review_button"
            style="@style/medium_text_style.bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_fill_green_background"
            android:text="@string/requirements_card_review_button"
            android:textColor="@color/basic_white"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_amount" />

        <!-- endregion -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>