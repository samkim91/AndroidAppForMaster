<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="signInClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="findInfoClick"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/action_bar"
            layout="@layout/action_bar" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_logo_title" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/email"
            style="@style/medium_text_style.medium"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/title_textview_background"
            android:hint="아이디 입력"
            android:inputType="textEmailAddress"
            android:paddingStart="16dp"
            android:textColor="@color/secondary_text_color"
            android:textColorHint="@color/detail_button_color" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/password"
            style="@style/medium_text_style.medium"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/title_textview_background"
            android:hint="비밀번호 입력"
            android:inputType="textWebPassword"
            android:paddingStart="16dp"
            android:textColor="@color/secondary_text_color"
            android:textColorHint="@color/detail_button_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_in"
            style="@style/medium_text_style.bold"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/status_button_call_background"
            android:onClick="@{signInClick}"
            android:text="로그인"
            android:textColor="@color/basic_white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/find_id_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:onClick="@{findInfoClick}"
            android:text="아이디·비밀번호 찾기" />

    </LinearLayout>
</layout>