<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="kr.co.soogong.master.ui.auth.signup.SignUpViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/gap_52">

        <kr.co.soogong.master.ui.widget.TitleEditTextButton
            android:id="@+id/company_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cancel_estimation_margin_top_52"
            app:title='@{"주소를 선택해주세요."}'
            app:alertText='@{"필수 정보입니다."}'
            app:setFirstEditTextHint='@{"주소를 검색해주세요."}'
            app:setSecondEditTextHint='@{"상세주소를 입력해주세요."}'
            app:buttonText='@{"검색"}'
            app:firstContent="@={vm.companyAddress}"
            app:secondContent="@={vm.companyAddressDetail}"
            app:setSecondEditTextVisible="@{true}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <kr.co.soogong.master.ui.widget.TitleDropdown
            android:id="@+id/service_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_28"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/company_address"
            app:content="@={vm.serviceArea}"
            app:title='@{"서비스 가능한 범위를 선택해주세요."}'
            app:setText='@{"범위를 선택해주세요."}'
            app:hintText='@{"범위를 선택해주세요."}'
            />

        <RelativeLayout
            android:id="@+id/map_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/gap_180"
            android:layout_marginTop="@dimen/gap_8"
            android:background="@drawable/shape_radius8_transparent"
            app:layout_constraintTop_toBottomOf="@id/service_area"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/alert_for_service_area"
            style="@style/small_text_style"
            android:text="@string/alert_required_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_4"
            android:textColor="@color/text_alert_color"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/map_view"
            />

        <kr.co.soogong.master.ui.widget.titlerecyclerimage.TitleRecyclerImage
            android:id="@+id/profile_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_28"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alert_for_service_area"
            app:title='@{"프로필 사진을 올려주세요. (선택)"}'
            app:subTitle='@{"마스터님의 사진을 올려주세요."}'
            app:subTitleVisible="@{true}"
            />

        <kr.co.soogong.master.ui.widget.titlerecyclerimage.TitleRecyclerImage
            android:id="@+id/company_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_28"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_images"
            app:title='@{"업체 소개사진을 올려주세요. (선택)"}'
            app:subTitle='@{"업체 페이지에 노출되는 대표 이미지입니다. (10장 이하)"}'
            app:subTitleVisible="@{true}"
            />

        <kr.co.soogong.master.ui.widget.titlerecyclerimage.TitleRecyclerImage
            android:id="@+id/other_certificates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_28"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/company_images"
            app:title='@{"자격증을 올려주세요. (선택)"}'
            app:subTitle='@{"정면 사진을 올려주세요. (10장 이하)"}'
            app:subTitleVisible="@{true}"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/previous_button"
            style="@style/medium_text_style.bold"
            android:layout_width="0dp"
            android:layout_height="@dimen/requirement_card_button_default_height"
            android:layout_marginTop="@dimen/gap_28"
            android:layout_marginEnd="@dimen/gap_8"
            android:background="@drawable/shape_fill_transparent_board_gray"
            android:text="@string/previous_button_text"
            android:textColor="@color/color_616161"
            app:layout_constraintEnd_toStartOf="@id/next_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/other_certificates" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_button"
            style="@style/medium_text_style.bold"
            android:layout_width="0dp"
            android:layout_height="@dimen/gap_40"
            android:background="@drawable/shape_fill_green_background"
            android:text="@string/next_button_text"
            android:textColor="@color/basic_white"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/previous_button"
            app:layout_constraintTop_toTopOf="@id/previous_button" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>