<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/gap_18"
        tools:background="@drawable/shape_light_green_background_light_green_border_radius8">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/speaker_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_speaker"
            app:layout_constraintEnd_toStartOf="@id/alert_title"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/alert_title"
            style="@style/text_style_14sp.medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap_6"
            android:layout_marginTop="@dimen/gap_2"
            android:textColor="@color/color_2E2E2E"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/speaker_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="현장 실측 중 작성한 메모를 찍어 올려주세요!"
            tools:textColor="@color/color_1FB571" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:barrierMargin="@dimen/gap_16"
            app:constraint_referenced_ids="speaker_icon, alert_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/line"
            android:layout_width="@dimen/gap_1"
            android:layout_height="@dimen/gap_0"
            android:background="@color/line_color"
            app:layout_constraintBottom_toBottomOf="@id/alert_content"
            app:layout_constraintEnd_toEndOf="@id/speaker_icon"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="@id/speaker_icon"
            app:layout_constraintTop_toTopOf="@id/alert_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/alert_content"
            style="@style/text_style_13sp.medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_555555"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/speaker_icon"
            app:layout_constraintTop_toBottomOf="@id/barrier"
            tools:text="실측 전 고객과 전화를 통해 정확한 일정 조율이 필요합니다. 전화통화가 이루어지지 않은 경우 실측이 취소될 수 있습니다." />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>