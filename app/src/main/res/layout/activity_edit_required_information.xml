<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/bind">

    <data>
        <variable
            name="vm"
            type="kr.co.soogong.master.ui.profile.edit.requiredinformation.EditRequiredInformationViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/action_bar"
            layout="@layout/action_bar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/alert_container_to_fill_up_required_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_00664E"
            android:paddingStart="@dimen/gap_20"
            android:paddingTop="@dimen/gap_16"
            android:paddingEnd="@dimen/gap_20"
            android:paddingBottom="@dimen/gap_16">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/alert_icon_to_fill_up_required_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bell"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/alert_text_to_fill_up_required_information"
                style="@style/small_text_style.regular"
                android:layout_width="@dimen/gap_0"
                android:layout_height="wrap_content"
                android:text="@string/alert_text_to_fill_up_required_information"
                android:textColor="@color/basic_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/alert_icon_to_fill_up_required_information"
                app:layout_constraintTop_toTopOf="@id/alert_icon_to_fill_up_required_information"
                app:layout_constraintWidth_percent="0.8" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_F5F5F5">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/required_profile_card_container_label"
                    style="@style/medium_text_style.medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:text="@string/required_profile_card_container_label"
                    android:textColor="@color/color_121212"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/required_profile_card_percentage"
                    style="@style/small_text_style.regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_12"
                    android:textColor="@color/color_FF711D"
                    app:layout_constraintBottom_toBottomOf="@id/required_profile_card_container_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/required_profile_card_container_label"
                    app:layout_constraintTop_toTopOf="@id/required_profile_card_container_label"
                    tools:text="40% 등록" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icon_saw_check_for_confirmed_master"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_12"
                    android:src="@drawable/ic_saw_check"
                    app:layout_constraintBottom_toBottomOf="@id/required_profile_card_container_label"
                    app:layout_constraintStart_toEndOf="@id/required_profile_card_container_label"
                    app:layout_constraintTop_toTopOf="@id/required_profile_card_container_label" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_saw_check_for_confirmed_master"
                    style="@style/small_text_style.bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_3"
                    android:text="@string/confirmed_text"
                    android:textColor="@color/color_1FC472"
                    app:layout_constraintBottom_toBottomOf="@id/icon_saw_check_for_confirmed_master"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/icon_saw_check_for_confirmed_master"
                    app:layout_constraintTop_toTopOf="@id/icon_saw_check_for_confirmed_master" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_saw_check_for_confirmed_master"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="icon_saw_check_for_confirmed_master, text_saw_check_for_confirmed_master" />

                <!-- 업체 소개 BRIEF_INTRODUCTION -->
                <kr.co.soogong.master.ui.widget.ProfileDefaultCard
                    android:id="@+id/brief_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_16"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_radius8_white_background"
                    android:elevation="@dimen/gap_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/required_profile_card_container_label"
                    app:subTitle='@{"업체만의 특별한 점을 소개해주세요."}'
                    app:firstDetail="@{vm.requiredInformation.briefIntroduction}"
                    app:title='@{"업체 소개"}' />

                <!-- 대표 이미지 COMPANY_IMAGE -->
                <kr.co.soogong.master.ui.widget.ProfileImageCard
                    android:id="@+id/company_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_radius8_white_background"
                    android:elevation="@dimen/gap_4"
                    app:imageUrl="@{vm.requiredInformation.companyImages.get(0)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/brief_introduction"
                    app:subTitle='@{"업체 페이지에 노출되는 대표 이미지 입니다."}'
                    app:subTitleVisible="@{true}"
                    app:title='@{"대표 이미지"}' />

                <!-- 사업자 대표명 BUSINESS_REPRESENTATIVE -->
                <kr.co.soogong.master.ui.widget.ProfileDefaultCard
                    android:id="@+id/business_representative_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_16"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_radius8_white_background"
                    android:elevation="@dimen/gap_4"
                    app:firstDetail="@{vm.requiredInformation.businessRepresentativeName}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/company_images"
                    app:subTitle='@{"프리랜서의 경우 시공하시는 분의 이름을 입력해주세요."}'
                    app:title='@{"사업자 대표명"}' />

                <!-- 사업자 정보 BUSINESS_UNIT_INFORMATION -->
                <kr.co.soogong.master.ui.widget.ProfileImageCard
                    android:id="@+id/business_unit_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_radius8_white_background"
                    android:elevation="@dimen/gap_4"
                    app:imageUrl="@{vm.requiredInformation.businessUnitInformation.imageForShow}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/business_representative_name"
                    app:title='@{"사업자 정보"}' />

                <!-- A/S 정보 WARRANTY_INFORMATION -->
                <kr.co.soogong.master.ui.widget.ProfileDefaultCard
                    android:id="@+id/warranty_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_radius8_white_background"
                    android:elevation="@dimen/gap_4"
                    app:firstDetail="@{vm.requiredInformation.warrantyPeriod}"
                    app:secondDetail="@{vm.requiredInformation.warrantyDescription}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/business_unit_information"
                    app:subTitle='@{"고객이 안심하고 시공할 수 있도록 A/S 정보를 알려주세요."}'
                    app:title='@{"A/S 정보"}' />

                <!-- 경력 CAREER -->
                <kr.co.soogong.master.ui.widget.ProfileDefaultCard
                    android:id="@+id/career"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_16"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:layout_marginBottom="@dimen/gap_20"
                    android:background="@drawable/shape_radius8_white_background"
                    android:elevation="@dimen/gap_4"
                    app:firstDetail="@{vm.requiredInformation.career}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/warranty_information"
                    app:title='@{"경력"}' />

                <!-- 업체 이름 COMPANY_NAME -->
                <kr.co.soogong.master.ui.widget.ProfileDefaultCard
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_16"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_radius8_white_background"
                    android:elevation="@dimen/gap_4"
                    app:firstDetail="@{vm.requiredInformation.companyName}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/career"
                    app:subTitle='@{"프리랜서의 경우 시공하시는 분의 이름을 입력해주세요."}'
                    app:title='@{"업체 이름"}' />

                <!-- 연락처 PHONE_NUMBER -->
                <kr.co.soogong.master.ui.widget.ProfileDefaultCard
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_16"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_radius8_white_background"
                    android:elevation="@dimen/gap_4"
                    app:firstDetail="@{vm.requiredInformation.phoneNumber}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/company_name"
                    app:title='@{"연락처"}' />

                <!-- 업체 주소 ADDRESS -->
                <kr.co.soogong.master.ui.widget.ProfileDefaultCard
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_16"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:background="@drawable/shape_radius8_white_background"
                    android:elevation="@dimen/gap_4"
                    app:firstDetail="@{vm.requiredInformation.address}"
                    app:secondDetail="@{vm.requiredInformation.subAddress}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/phone_number"
                    app:title='@{"업체 주소"}' />

                <!-- 시공 업종 MAJOR -->
                <kr.co.soogong.master.ui.widget.ProfileChipGroupCard
                    android:id="@+id/major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_24"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:layout_marginBottom="@dimen/gap_24"
                    android:background="@drawable/shape_radius8_white_background"
                    android:elevation="@dimen/gap_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/address"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:title='@{"시공 업종"}' />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/default_button"
            style="@style/medium_text_style.bold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_48"
            android:background="@drawable/default_button_selector"
            android:text="@string/request_confirmation"
            android:textColor="@color/basic_white" />
    </LinearLayout>


</layout>