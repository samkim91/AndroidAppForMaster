<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="search_icon_click"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/main_tabs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:tabBackground="@color/pure_white"
            app:tabIndicatorColor="@color/transparent"
            app:tabSelectedTextColor="@color/pure_black"
            app:tabTextAppearance="@style/title_3.regular"
            app:tabTextColor="@color/grey_1">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/requirement_before_progress_tab" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/requirement_in_progress_tab" />
        </com.google.android.material.tabs.TabLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/gap_16"
            android:onClick="@{search_icon_click}"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="@id/main_tabs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/main_tabs" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/filter_tabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_tabs"
            app:tabBackground="@color/pure_white"
            app:tabIndicatorColor="@color/pure_black"
            app:tabIndicatorFullWidth="false"
            app:tabMode="auto"
            app:tabPaddingEnd="@dimen/gap_8"
            app:tabPaddingStart="@dimen/gap_8"
            app:tabSelectedTextColor="@color/pure_black"
            app:tabTextAppearance="@style/sub_headline.regular"
            app:tabTextColor="@color/light_grey_2" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/requirements_view_pager"
            android:layout_width="@dimen/gap_0"
            android:layout_height="@dimen/gap_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filter_tabs" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>