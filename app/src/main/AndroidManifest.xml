<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.co.soogong.master">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".SoogongApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="${cleartextTrafficPermitted}">
        <activity android:name=".ui.auth.signup.steps.ViewPolicyActivity" />
        <activity android:name=".ui.profile.review.MyReviewsActivity" />
        <activity android:name=".ui.profile.detail.EditProfileContainerActivity" />
        <activity android:name=".ui.profile.detail.portfoliolist.PortfolioListActivity" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.auth.SignMainActivity" />
        <activity
            android:name=".ui.auth.signup.SignUpActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ui.auth.signup.AddressActivity" />
        <activity android:name=".ui.auth.signin.SignInActivity" />
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.major.MajorActivity" />
        <activity android:name=".ui.image.ImageActivity" />
        <activity android:name=".ui.requirement.action.cancel.CancelActivity" />
        <activity android:name=".ui.requirement.action.end.EndRepairActivity" />
        <activity android:name=".ui.requirement.action.search.SearchActivity" />
        <activity
            android:name=".ui.requirement.action.view.ViewRequirementActivity"
            android:launchMode="singleTask" />        <!-- 실측요청건을 고려 singleTop 로 설정 -->
        <activity
            android:name=".ui.requirement.action.write.WriteEstimationActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.requirement.action.write.MeasurementActivity"
            android:launchMode="singleTask" />
        <activity android:name=".ui.requirement.action.write.template.EstimationTemplatesActivity" />
        <activity android:name=".ui.preferences.account.AccountActivity" />
        <activity android:name=".ui.preferences.detail.PreferencesContainerActivity" />

        <service
            android:name=".SoogongMasterMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="firebase_messaging_auto_init_enabled"
            android:value="false" />
        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="false" />
        <meta-data
            android:name="android.webkit.WebView.EnableSafeBrowsing"
            android:value="true" /> <!-- javascript interface injection 관련 -->

    </application>

</manifest>