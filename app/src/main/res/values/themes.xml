<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowBackground">@color/app_background_color</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <!-- ActionBar theme. -->
    <style name="AppActionBar" parent="android:Widget.DeviceDefault.ActionBar">
        <item name="android:background">@color/action_bar_background_color</item>
        <item name="android:titleTextStyle">@style/AppActionBar.Title</item>
    </style>

    <style name="AppActionBar.Title">
        <item name="android:textColor">@color/action_bar_title_color</item>
        <item name="android:fontFamily">sec-roboto-regular</item>
        <item name="android:textSize">@dimen/actionbar_title_collapsed_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/actionbar_title_collapsed_extra_size</item>
    </style>

    <style name="AppActionBar.SubTitle">
        <item name="android:textColor">@color/action_bar_sub_title_color</item>
        <item name="android:fontFamily">sec-roboto-regular</item>
        <item name="android:textSize">@dimen/actionbar_sub_title_collapsed_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/actionbar_title_collapsed_extra_size</item>
    </style>

    <style name="AppActionBar.Extended" />

    <style name="AppActionBar.Extended.Title">
        <item name="android:textColor">@color/action_bar_title_color</item>
        <item name="android:fontFamily">sec-roboto-light</item>
        <item name="android:textSize">@dimen/actionbar_title_expanded_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/actionbar_title_expanded_extra_size</item>
    </style>

    <style name="AppActionBar.Extended.SubTitle">
        <item name="android:textColor">@color/action_bar_sub_title_color</item>
        <item name="android:fontFamily">sec-roboto-regular</item>
        <item name="android:textSize">@dimen/actionbar_sub_title_expanded_text_size</item>
    </style>

    <style name="AppActionBar.Extended.TitleWhiteText" parent="android:TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@color/action_bar_title_color_white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/actionbar_title_expanded_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/actionbar_title_expanded_extra_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ListSubHeader" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/list_header_text_size</item>
        <item name="android:textColor">@color/list_header_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@color/list_item_text_color</item>
    </style>

    <style name="ListItemDescriptionText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/list_item_description_text_size</item>
        <item name="android:textColor">@color/list_item_description_text_color</item>
    </style>
</resources>