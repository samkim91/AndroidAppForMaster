<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/action_bar"
            layout="@layout/action_bar" />

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/medium_text_style.medium"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/title_textview_background"
            android:hint="아이디 입력"
            android:inputType="textEmailAddress"
            android:paddingStart="16dp"
            android:textColor="@color/detail_button_color" />

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/medium_text_style.medium"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/title_textview_background"
            android:hint="비밀번호 입력"
            android:inputType="textWebPassword"
            android:paddingStart="16dp"
            android:textColor="@color/detail_button_color" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/medium_text_style.bold"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/status_button_call_background"
            android:text="아이디·비밀번호 전송"
            android:textColor="@color/basic_white" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/medium_text_style.regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="연락처로 아이디·비밀번호를 전송해드립니다."
            android:textColor="@color/tertiary_text_color" />

    </LinearLayout>
</layout>