<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.auth.signup.SignUpViewModel" />

        <variable
            name="inputType"
            type="android.text.InputType" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <kr.co.soogong.master.ui.widget.LargeTitleSubtitle
                android:id="@+id/title_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_40"
                android:layout_marginEnd="@dimen/gap_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:subTitle='@{"연락이 가능한 휴대폰번호를 입력해주세요."}'
                app:subTitleVisible="@{true}"
                app:title='@{"휴대폰번호를 입력해주세요."}' />

            <kr.co.soogong.master.ui.widget.TitleEditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_20"
                android:layout_marginTop="@dimen/gap_32"
                android:layout_marginEnd="@dimen/gap_20"
                app:alertText='@{"필수 정보입니다."}'
                app:content="@={vm.tel}"
                app:hintText='@{"휴대폰번호 - 없이 입력"}'
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_widget"
                app:setInputType="@{inputType.TYPE_CLASS_NUMBER}"
                app:setMaxLength="@{11}"
                app:titleVisible="@{false}" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/default_button"
                style="@style/medium_text_style.bold"
                android:layout_width="@dimen/gap_0"
                android:layout_height="@dimen/gap_48"
                android:background="@color/color_22D47B"
                android:text="@string/request_certification_number_button"
                android:textColor="@color/basic_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="인증번호 요청" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>