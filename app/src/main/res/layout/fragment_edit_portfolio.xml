<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/bind"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <import type="android.net.Uri" />

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.profile.edit.portfoliolist.portfolio.PortfolioViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/gap_20"
                android:paddingTop="@dimen/gap_32"
                android:paddingEnd="@dimen/gap_20"
                android:paddingBottom="@dimen/gap_52">

                <kr.co.soogong.master.ui.widget.TitleEditText
                    android:id="@+id/job_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:alertText='@{"필수 정보입니다."}'
                    app:content="@={vm.title}"
                    app:hintText='@{"해당 시공의 제목을 작성해주세요."}'
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:title='@{"시공 제목"}' />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/before_job_label"
                    style="@style/medium_text_style.medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_28"
                    android:text="@string/image_before_job_label"
                    android:textColor="@color/text_basic_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/job_title" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/camera_icon_before_job"
                    android:layout_width="@dimen/gap_100"
                    android:layout_height="@dimen/gap_100"
                    android:layout_marginTop="@dimen/gap_12"
                    android:background="@drawable/ic_camera"
                    app:layout_constraintStart_toStartOf="@id/before_job_label"
                    app:layout_constraintTop_toBottomOf="@id/before_job_label"
                    bind:visible="@{vm.imageBeforeJob == Uri.EMPTY}" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/image_before_job"
                    android:layout_width="@dimen/gap_100"
                    android:layout_height="@dimen/gap_100"
                    android:layout_marginTop="@dimen/gap_12"
                    app:cardCornerRadius="@dimen/gap_8"
                    app:cardElevation="@dimen/gap_0"
                    app:layout_constraintStart_toStartOf="@id/before_job_label"
                    app:layout_constraintTop_toBottomOf="@id/before_job_label"
                    bind:visible="@{vm.imageBeforeJob != Uri.EMPTY}">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_before_job_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        bind:image_uri="@{vm.imageBeforeJob}" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_before_job_close_icon"
                        android:layout_width="@dimen/gap_24"
                        android:layout_height="@dimen/gap_24"
                        android:layout_gravity="right"
                        bind:onClick="@{vm::clearImageBeforeJob}"
                        android:background="@drawable/ic_close_in_image" />
                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/after_job_label"
                    style="@style/medium_text_style.medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_28"
                    android:text="@string/image_after_job_label"
                    android:textColor="@color/text_basic_color"
                    app:layout_constraintStart_toEndOf="@id/before_job_label"
                    app:layout_constraintTop_toTopOf="@id/before_job_label" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/camera_icon_after_job"
                    android:layout_width="@dimen/gap_100"
                    android:layout_height="@dimen/gap_100"
                    android:layout_marginTop="@dimen/gap_12"
                    android:background="@drawable/ic_camera"
                    app:layout_constraintStart_toStartOf="@id/after_job_label"
                    app:layout_constraintTop_toBottomOf="@id/after_job_label"
                    bind:visible="@{vm.imageAfterJob == Uri.EMPTY}" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/image_after_job"
                    android:layout_width="@dimen/gap_100"
                    android:layout_height="@dimen/gap_100"
                    android:layout_marginTop="@dimen/gap_12"
                    app:cardCornerRadius="@dimen/gap_8"
                    app:cardElevation="@dimen/gap_0"
                    app:layout_constraintStart_toStartOf="@id/after_job_label"
                    app:layout_constraintTop_toBottomOf="@id/after_job_label"
                    bind:visible="@{vm.imageAfterJob != Uri.EMPTY}">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_after_job_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        bind:image_uri="@{vm.imageAfterJob}" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_after_job_close_icon"
                        android:layout_width="@dimen/gap_24"
                        android:layout_height="@dimen/gap_24"
                        android:layout_gravity="right"
                        bind:onClick="@{vm::clearImageAfterJob}"
                        android:background="@drawable/ic_close_in_image" />
                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/images_barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="camera_icon_before_job, camera_icon_after_job, image_before_job, image_after_job" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/alert"
                    style="@style/small_text_style.regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_4"
                    android:textColor="@color/text_alert_color"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/images_barrier"
                    tools:text="필수 정보입니다." />

                <kr.co.soogong.master.ui.widget.TitleEditTextCounterView
                    android:id="@+id/job_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_28"
                    app:alertText='@{"10자 이상으로 입력해주세요."}'
                    app:content="@={vm.description}"
                    app:hintText='@{"해당 시공에 대해 간단한 설명을 해주세요."}'
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/alert"
                    app:limitedCount='@{500}'
                    app:title='@{"시공 설명"}' />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/default_button"
            style="@style/medium_text_style.bold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/color_22D47B"
            android:text="@string/writing_done"
            android:textColor="@color/basic_white" />
    </LinearLayout>

</layout>