<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.InputType" />

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.requirement.action.end.EndRepairViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/action_bar"
            layout="@layout/action_bar_button" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/banner_image"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/gap_120"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_banner_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <kr.co.soogong.master.atomic.molecules.TitleEditText
                    android:id="@+id/actual_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_32"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:textColor="@color/text_basic_color"
                    app:alertText="@{@string/minimum_cost}"
                    app:alertVisible="@{false}"
                    app:content="@={vm.actualPrice}"
                    app:hintText="@{@string/insert_number_only_with_unit_text}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/banner_image"
                    app:setInputType="@{InputType.TYPE_CLASS_NUMBER}"
                    app:setMaxLength="@{13}"
                    app:title="@{@string/end_estimate_price_title}" />

                <kr.co.soogong.master.atomic.molecules.TextCheckBox
                    android:id="@+id/checkbox_for_actual_price_including_vat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginEnd="@dimen/gap_20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/actual_price"
                    app:text="@{@string/vat_included}" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/calender_title"
                    style="@style/text_style_16sp.medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginTop="@dimen/gap_28"
                    android:layout_marginEnd="@dimen/gap_20"
                    android:text="@string/end_estimate_calendar_title"
                    android:textColor="@color/text_basic_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/checkbox_for_actual_price_including_vat" />

                <CalendarView
                    android:id="@+id/calender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/CalenderViewCustom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/calender_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/calender_alert"
                    style="@style/text_style_14sp.regular"
                    android:layout_width="@dimen/gap_0"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/gap_20"
                    android:layout_marginEnd="20dp"
                    android:text="@string/required_field_alert"
                    android:textColor="@color/text_alert_color"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/calender" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</layout>