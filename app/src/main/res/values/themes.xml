        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/color_BDBDBD</item>
    </style>

    <style name="ChipChoiceRectangularStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/basic_white</item>
        <item name="android:textColor">@color/chip_selector</item>
        <item name="chipStrokeColor">@color/chip_selector</item>
        <item name="chipStrokeWidth">@dimen/chips_stroke_width_1dp</item>
        <item name="chipCornerRadius">@dimen/chips_radius_8dp</item>
        <item name="chipMinHeight">@dimen/chips_height_40dp</item>
    </style>

    <style name="ChipChoiceRoundStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_selector_for_requirement_status</item>
        <item name="android:textColor">@color/text_selector_for_requirement_status</item>
        <item name="chipStrokeColor">@color/stroke_selector_for_requirement_status</item>
        <item name="chipStrokeWidth">@dimen/chips_stroke_width_1dp</item>
        <item name="chipCornerRadius">@dimen/chips_radius_20dp</item>
        <item name="chipMinHeight">@dimen/chips_height_38dp</item>
    </style>

    <style name="ChipEntryRoundStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/basic_white</item>
        <item name="android:textColor">@color/color_1FC472</item>
        <item name="chipStrokeColor">@color/color_1FC472</item>
        <item name="chipStrokeWidth">@dimen/chips_stroke_width_1dp</item>
        <item name="chipCornerRadius">@dimen/chips_radius_20dp</item>
        <item name="chipMinHeight">@dimen/chips_height_37dp</item>
    </style>

    <style name="checkboxDefaultStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/check_box_selector</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/app_color</item>
        <item name="android:colorForeground">@color/text_basic_color</item>
    </style>
