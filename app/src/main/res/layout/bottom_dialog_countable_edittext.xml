<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/header_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_4"
            android:background="@drawable/ic_small_bar"
            android:backgroundTint="@color/color_E3E3E3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_14"
            android:layout_marginStart="@dimen/gap_24"
            android:background="@drawable/ic_close_rounded"
            android:backgroundTint="@color/color_A8A8A8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_bar" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_14"
            android:layout_marginEnd="@dimen/gap_24"
            android:background="@drawable/ic_simple_check"
            android:backgroundTint="@color/color_A8A8A8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_bar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bottom_dialog_title"
            style="@style/text_style_18sp.bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_10"
            android:text="@string/bottom_dialog_estimation_template_title"
            android:textColor="@color/color_2E2E2E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/close_button"
            app:layout_constraintBottom_toTopOf="@id/edittext_description"
            app:layout_constraintTop_toBottomOf="@id/close_button" />

        <kr.co.soogong.master.ui.widget.TitleEditTextCounter
            android:id="@+id/edittext_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_9"
            android:layout_marginStart="@dimen/gap_20"
            android:layout_marginEnd="@dimen/gap_20"
            android:layout_marginBottom="@dimen/gap_20"
            app:titleVisible="@{false}"
            app:limitedCount="@{500}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottom_dialog_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>