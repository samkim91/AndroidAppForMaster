<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/bind"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="kr.co.soogong.master.ui.auth.signup.SignUpViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/gap_52">

        <kr.co.soogong.master.ui.widget.TitleEditTextButton
            android:id="@+id/company_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cancel_estimation_margin_top_52"
            app:title='@{"주소를 선택해주세요.."}'
            app:alertText='@{"필수 정보입니다."}'
            app:setFirstEditTextHint='@{"주소를 검색해주세요."}'
            app:setSecondEditTextHint='@{"상세주소를 입력해주세요."}'
            app:buttonText='@{"검색"}'
            app:setEditTextSecondVisible="@{true}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:content="@={vm.companyName}"
            />

        <kr.co.soogong.master.ui.widget.TitleDropdown
            android:id="@+id/service_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_28"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/company_address"
            app:content="@={vm.workExperience}"
            app:title='@{"서비스 가능한 범위를 선택해주세요."}'
            app:setText='@{"범위를 선택해주세요."}'
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/previous_button"
            style="@style/medium_text_style.bold"
            android:layout_width="0dp"
            android:layout_height="@dimen/requirement_card_button_default_height"
            android:layout_marginTop="@dimen/requirement_card_call_button_margin_top"
            android:layout_marginEnd="@dimen/requirement_card_call_button_margin_end"
            android:background="@drawable/shape_fill_transparent_board_green"
            android:text="@string/previous_button_text"
            android:textColor="@color/color_616161"
            app:layout_constraintEnd_toStartOf="@id/next_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/service_area" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_button"
            style="@style/medium_text_style.bold"
            android:layout_width="0dp"
            android:layout_height="@dimen/gap_40"
            android:layout_marginTop="@dimen/gap_28"
            android:background="@drawable/shape_fill_green_background"
            android:text="@string/next_button_text"
            android:textColor="@color/basic_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/previous_button"
            app:layout_constraintTop_toBottomOf="@id/service_area" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>