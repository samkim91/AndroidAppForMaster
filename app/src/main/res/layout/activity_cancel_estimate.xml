<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.requirements.action.cancel.CancelEstimateViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/action_bar"
            layout="@layout/action_bar_button" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cancel_option_label"
            style="@style/medium_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:text="@string/cancel_estimate_cancel_option_label"
            android:textColor="@color/text_basic_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_bar" />

        <RadioGroup
            android:id="@+id/cancel_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cancel_option_label">

            <RadioButton
                android:id="@+id/cancel_option_1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/cancel_estimate_cancel_option_1"
                android:textColor="@color/text_basic_color"
                tools:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/cancel_estimate_cancel_option_2"
                android:textColor="@color/text_basic_color" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/cancel_estimate_cancel_option_3"
                android:textColor="@color/text_basic_color" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/cancel_estimate_cancel_option_4"
                android:textColor="@color/text_basic_color" />
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cancel_option_detail_label"
            style="@style/medium_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="20dp"
            android:text="@string/cancel_estimate_cancel_option_detail_label"
            android:textColor="@color/text_basic_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cancel_option" />

        <kr.co.soogong.master.ui.widget.EditCountBoxView
            android:id="@+id/cancel_option_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="20dp"
            app:hintText='@{"취소 사유에 대해 더 하고 싶은 말이 있으시면 작성해주세요."}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cancel_option_detail_label"
            app:limitedCount='@{100}' />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>