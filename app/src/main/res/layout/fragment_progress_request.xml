<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="kr.co.soogong.master.ui.requirements.progress.detail.request.ProgressRequestViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_board_green"
                        android:text="@{vm.category}"
                        android:textColor="@color/app_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="욕실장" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/location"
                        style="@style/big_text_style.bold"
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center"
                        android:text="@{vm.location}"
                        android:textColor="@color/title_color"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/category"
                        tools:text="서울시 관악구" />

                    <kr.co.soogong.master.ui.widget.TitleText2
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="36dp"
                        app:detailDate="@{vm.date}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/location"
                        app:title="@{@string/request_date}"
                        tools:detail="2020년 8월 26일 13시 53분" />

                    <kr.co.soogong.master.ui.widget.TitleText2
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="24dp"
                        app:detail="@{vm.userName}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/date"
                        app:title="@{@string/request_user_name}"
                        tools:detail="홍길동" />

                    <kr.co.soogong.master.ui.widget.TitleText2
                        android:id="@+id/type"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="24dp"
                        app:detail="@{vm.houseType}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/name"
                        app:title="@{@string/request_type}"
                        tools:detail="아파트" />

                    <kr.co.soogong.master.ui.widget.TitleText2
                        android:id="@+id/size"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="24dp"
                        app:detail="@{vm.size}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/type"
                        app:title="@{@string/request_size}"
                        tools:detail="10~20평" />

                    <kr.co.soogong.master.ui.widget.TitleText2
                        android:id="@+id/detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        app:detail="@{vm.content}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/size"
                        app:title="@{@string/request_detail}"
                        tools:detail="욕실장이 벽에서 떨어졌어요. 새로 욕실장을 설치했으면 좋겠습니다." />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>