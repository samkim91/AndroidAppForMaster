<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/gap_24"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            style="@style/text_style_18sp.bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap_20"
            android:layout_marginEnd="@dimen/gap_20"
            android:layout_marginBottom="@dimen/gap_12"
            android:gravity="start"
            android:textColor="@color/c_2E2E2E"
            android:visibility="gone"
            tools:text="제목" />

        <TextView
            android:id="@+id/dialog_subtitle"
            style="@style/text_style_16sp.bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap_20"
            android:layout_marginBottom="@dimen/gap_24"
            android:layout_marginEnd="@dimen/gap_20"
            android:gravity="center"
            android:textColor="@color/c_616161"
            tools:text="부제목" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/c_E3E3E3" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bottom_sheet_dialog_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/view_holder_bottom_sheet_dialog_item" />
    </LinearLayout>
</layout>